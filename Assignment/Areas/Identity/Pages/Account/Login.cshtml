@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<style>
    .login-wrapper {
        min-height: calc(100vh - 120px);
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #fff 0%, #ffe9e1 55%, #ffd0c2 100%);
        border-radius: 24px;
        padding: 2rem 1rem;
    }

    .login-card {
        width: 100%;
        max-width: 900px;
        border-radius: 24px;
        overflow: hidden;
        background: #ffffff;
        box-shadow: 0 24px 70px -32px rgba(255, 99, 71, 0.65);
    }

    .login-hero {
        background: linear-gradient(200deg, #ff9175 0%, #ff6b4d 60%, #ff4f2d 100%);
        color: #fff;
        position: relative;
    }

        .login-hero::before {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 20% 20%, rgba(255, 255, 255, 0.35), transparent 55%);
        }

        .login-hero .hero-content {
            position: relative;
            z-index: 2;
        }

    .login-form {
        padding: 2.5rem 2rem;
    }

        .login-form .badge {
            background: rgba(255, 99, 71, 0.1);
            color: #ff6347;
            border-radius: 999px;
            padding: 0.45rem 1.2rem;
            font-weight: 600;
        }

        .login-form h2 {
            font-weight: 700;
        }

    .login-form .form-floating > .form-control {
        border-radius: 16px;
        border: 1px solid transparent;
        background: #f7f8fb;
        padding-left: 3rem;
        font-size: 0.95rem;
        transition: all .2s ease;
    }

        .login-form .form-floating > .form-control:focus {
            background: #fff;
            border-color: rgba(255, 99, 71, 0.45);
            box-shadow: 0 0 0 .2rem rgba(255, 99, 71, 0.2);
        }

    .login-form .input-icon {
        position: absolute;
        top: 50%;
        left: 1rem;
        transform: translateY(-50%);
        color: #ff6347;
        font-size: 1rem;
    }

    .login-form .form-floating > label {
        padding-left: 3rem;
        color: #7a7a7a;
    }

    .login-form .btn-primary {
        background: #ff6347;
        border-color: #ff6347;
        border-radius: 16px;
        padding: 0.9rem;
        font-weight: 600;
        font-size: 1rem;
        box-shadow: 0 12px 24px -10px rgba(255, 99, 71, 0.6);
    }

        .login-form .btn-primary:hover {
            background: #ff5333;
            border-color: #ff5333;
        }

    .login-meta a {
        color: #ff6347;
        font-weight: 600;
        text-decoration: none;
    }

        .login-meta a:hover {
            text-decoration: underline;
        }

    .social-login button {
        border-radius: 14px;
        padding: 0.75rem;
        font-weight: 600;
    }

    .auth-divider {
        position: relative;
        margin: 2rem 0 1rem;
    }

        .auth-divider::before,
        .auth-divider::after {
            content: "";
            position: absolute;
            top: 50%;
            width: 40%;
            height: 1px;
            background: #e6e6e6;
        }

        .auth-divider::before {
            left: 0;
        }

        .auth-divider::after {
            right: 0;
        }

        .auth-divider span {
            position: relative;
            z-index: 2;
            background: #fff;
            font-size: 0.9rem;
        }

    @media (max-width: 991.98px) {
        .login-hero {
            display: none;
        }

        .login-form {
            padding: 2rem 1.25rem;
        }
    }
</style>

<div class="login-wrapper">
    <div class="login-card">
        <div class="row g-0">
            <div class="col-lg-5 login-hero d-none d-lg-flex align-items-center">
                <div class="hero-content p-5">
                    <span class="badge bg-white text-danger mb-3">Xin chào trở lại</span>
                    <h2 class="fw-bold mb-3">Đăng nhập để thưởng thức</h2>
                    <p class="mb-4 opacity-75">Quản lý đơn hàng, theo dõi ưu đãi và đặt món chỉ với vài chạm.</p>
                    <ul class="list-unstyled d-flex flex-column gap-2 opacity-75">
                        <li><i class="fas fa-check-circle me-2"></i>Nhận thông báo khi đơn hàng chuẩn bị giao</li>
                        <li><i class="fas fa-check-circle me-2"></i>Lưu các món yêu thích để đặt lại nhanh chóng</li>
                        <li><i class="fas fa-check-circle me-2"></i>Nhập mã giảm giá độc quyền từ FoodApp</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-7 bg-white">
                <div class="login-form h-100 d-flex flex-column">
                    <div class="text-center mb-4">
                        <span class="badge">Chào mừng bạn</span>
                        <h2 class="mt-3">Đăng nhập tài khoản</h2>
                        <p class="text-muted mb-0">Sử dụng email và mật khẩu để truy cập FoodApp.</p>
                    </div>

                    <section class="flex-grow-1 d-flex flex-column">
                        <form id="account" method="post" class="flex-grow-1 d-flex flex-column">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <div class="form-floating mb-3 position-relative">
                                <span class="input-icon"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 position-relative">
                                <span class="input-icon"><i class="fas fa-lock"></i></span>
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2 login-meta">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label asp-for="Input.RememberMe" class="form-check-label">Nhớ đăng nhập</label>
                                </div>
                                <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                            </div>

                            <button id="login-submit" type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                        </form>

                        <div class="text-center mt-4 login-meta">
                            <span class="text-muted">Chưa có tài khoản?</span>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="ms-2">Đăng ký ngay</a>
                        </div>

                        <div class="auth-divider mt-4 position-relative text-center">
                            <span class="px-3 text-muted">Hoặc đăng nhập nhanh</span>
                        </div>

                        <div class="social-login mt-3">
                            @{ var externalLogins = Model.ExternalLogins ?? new List<Microsoft.AspNetCore.Authentication.AuthenticationScheme>(); }
                            @if (externalLogins.Count == 0)
                            {
                                <div class="text-center text-muted small">
                                    Hiện chưa có phương thức đăng nhập nhanh được cấu hình.
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="row g-3">
                                        @foreach (var provider in externalLogins)
                                        {
                                            <div class="col-sm-6">
                                                <button type="submit" class="btn btn-outline-secondary w-100" name="provider" value="@provider.Name">
                                                    <i class="fas fa-sign-in-alt me-2"></i>@provider.DisplayName
                                                </button>
                                            </div>
                                        }
                                    </div>
                                </form>
                            }
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
