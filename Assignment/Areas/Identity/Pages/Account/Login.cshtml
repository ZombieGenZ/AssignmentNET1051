@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<link href="~/css/auth.css" rel="stylesheet" />

<div class="auth-page">
    <div class="auth-card auth-card--narrow">
        <div class="auth-header">
            <h1>Đăng nhập</h1>
            <p>Chào mừng bạn quay lại với FoodApp. Đăng nhập để tiếp tục theo dõi đơn hàng và ưu đãi của bạn.</p>
        </div>

        <section class="auth-body">
            <form id="account" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="auth-options">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">Nhớ đăng nhập</label>
                    </div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="auth-link">Quên mật khẩu?</a>
                </div>

                <button id="login-submit" type="submit" class="btn btn-primary w-100">Đăng nhập</button>
            </form>

            <p class="auth-switch">Chưa có tài khoản? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">Đăng ký ngay</a></p>

            <div class="auth-separator" aria-hidden="true">
                <span>Hoặc tiếp tục với</span>
            </div>

            <div class="auth-social">
                @{ var externalLogins = Model.ExternalLogins ?? new List<Microsoft.AspNetCore.Authentication.AuthenticationScheme>(); }
                @if (externalLogins.Count == 0)
                {
                    <p class="auth-note">Hiện chưa có phương thức đăng nhập nhanh được cấu hình.</p>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="row g-2">
                            @foreach (var provider in externalLogins)
                            {
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-outline-secondary w-100" name="provider" value="@provider.Name">
                                        <i class="fas fa-sign-in-alt me-2"></i>@provider.DisplayName
                                    </button>
                                </div>
                            }
                        </div>
                    </form>
                }
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
