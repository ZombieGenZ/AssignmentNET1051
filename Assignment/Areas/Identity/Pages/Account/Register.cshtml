@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}

<link href="~/css/auth.css" rel="stylesheet" />

<div class="auth-page">
    <div class="auth-card auth-card--wide">
        <div class="auth-header">
            <h1>Tạo tài khoản</h1>
            <p>Điền thông tin của bạn để khám phá các ưu đãi và tính năng quản lý đơn hàng của FoodApp.</p>
        </div>

        <section class="auth-body">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating">
                    <input asp-for="Input.FullName" class="form-control" placeholder=" " />
                    <label asp-for="Input.FullName"></label>
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.UserName" class="form-control" autocomplete="off" placeholder=" " />
                    <label asp-for="Input.UserName"></label>
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder=" " />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.DateOfBirth" type="date" class="form-control" placeholder=" " />
                            <label asp-for="Input.DateOfBirth"></label>
                            <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.Phone" class="form-control" autocomplete="tel" placeholder=" " />
                            <label asp-for="Input.Phone"></label>
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder=" " />
                            <label asp-for="Input.Password"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder=" " />
                            <label asp-for="Input.ConfirmPassword"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="auth-cta">
                    <button id="registerSubmit" type="submit" class="btn btn-primary">Tạo tài khoản</button>
                    <a class="btn btn-outline-secondary" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Đã có tài khoản? Đăng nhập</a>
                </div>

                <div class="auth-separator" aria-hidden="true">
                    <span>Hoặc tiếp tục với</span>
                </div>

                <div class="auth-social">
                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <p class="auth-note">Hiện chưa có phương thức đăng ký nhanh được cấu hình.</p>
                    }
                    else
                    {
                        <div class="row g-2">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-outline-secondary w-100" name="provider" value="@provider.Name" form="external-account">
                                        <i class="fas fa-sign-in-alt me-2"></i>@provider.DisplayName
                                    </button>
                                </div>
                            }
                        </div>
                    }
                </div>
            </form>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-none"></form>
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
