@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}

<style>
    .auth-wrapper {
        min-height: calc(100vh - 120px);
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #fff0eb 0%, #ffe1d7 45%, #fff 100%);
        border-radius: 24px;
        padding: 2rem 1rem;
    }

    .auth-card {
        background: #ffffff;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 24px 70px -30px rgba(255, 99, 71, 0.7);
        max-width: 980px;
        width: 100%;
    }

    .auth-hero {
        background: linear-gradient(160deg, #ff8265 0%, #ff6347 55%, #f84521 100%);
        color: #fff;
        position: relative;
    }

        .auth-hero::after {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at top right, rgba(255, 255, 255, 0.35), transparent 55%);
        }

        .auth-hero .hero-content {
            position: relative;
            z-index: 2;
        }

    .auth-form {
        padding: 2.5rem 2rem;
    }

        .auth-form .badge {
            background: rgba(255, 99, 71, 0.1);
            color: #ff6347;
            border-radius: 999px;
            padding: 0.5rem 1.25rem;
            font-weight: 600;
        }

        .auth-form h2 {
            font-weight: 700;
        }

    .auth-form .form-floating > .form-control {
        background-color: #f7f8fb;
        border: 1px solid transparent;
        border-radius: 16px;
        padding-left: 3rem;
        font-size: 0.95rem;
        transition: all .2s ease;
    }

        .auth-form .form-floating > .form-control:focus {
            background: #fff;
            border-color: rgba(255, 99, 71, 0.45);
            box-shadow: 0 0 0 .2rem rgba(255, 99, 71, 0.2);
        }

    .auth-form .input-icon {
        position: absolute;
        top: 50%;
        left: 1rem;
        transform: translateY(-50%);
        color: #ff6347;
        font-size: 1rem;
    }

    .auth-form .form-floating > label {
        padding-left: 3rem;
        color: #7a7a7a;
    }

    .auth-cta {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .auth-cta .btn-primary {
        background: #ff6347;
        border-color: #ff6347;
        border-radius: 16px;
        padding: 0.9rem;
        font-size: 1rem;
        font-weight: 600;
        box-shadow: 0 12px 24px -10px rgba(255, 99, 71, 0.6);
    }

        .auth-cta .btn-primary:hover {
            background: #ff5333;
            border-color: #ff5333;
        }

    .auth-cta .btn-outline-secondary {
        border-radius: 16px;
        padding: 0.9rem;
        font-weight: 600;
    }

    .auth-divider {
        position: relative;
        text-align: center;
        margin: 2rem 0;
    }

        .auth-divider::before,
        .auth-divider::after {
            content: "";
            position: absolute;
            top: 50%;
            width: 40%;
            height: 1px;
            background: #e6e6e6;
        }

        .auth-divider::before {
            left: 0;
        }

        .auth-divider::after {
            right: 0;
        }

        .auth-divider span {
            background: #fff;
            padding: 0 .75rem;
            color: #9c9c9c;
            font-size: 0.9rem;
            font-weight: 500;
        }

    .social-login button {
        width: 100%;
        border-radius: 14px;
        padding: 0.75rem;
        font-weight: 600;
    }

    @media (max-width: 991.98px) {
        .auth-hero {
            display: none;
        }

        .auth-form {
            padding: 2rem 1.25rem;
        }
    }
</style>

<div class="auth-wrapper">
    <div class="auth-card">
        <div class="row g-0">
            <div class="col-lg-5 auth-hero d-none d-lg-flex align-items-center">
                <div class="hero-content p-5">
                    <span class="badge bg-white text-danger mb-3">Chào mừng bạn</span>
                    <h2 class="fw-bold mb-3">Tạo tài khoản FoodApp</h2>
                    <p class="mb-4 opacity-75">Khám phá những ưu đãi độc quyền, đặt món nhanh chóng và theo dõi đơn hàng mọi lúc mọi nơi.</p>
                    <ul class="list-unstyled d-flex flex-column gap-2 opacity-75">
                        <li><i class="fas fa-check-circle me-2"></i>Nhận thông báo về combo mới mỗi tuần</li>
                        <li><i class="fas fa-check-circle me-2"></i>Lưu địa chỉ giao hàng ưa thích của bạn</li>
                        <li><i class="fas fa-check-circle me-2"></i>Tích điểm và đổi quà hấp dẫn</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-7 bg-white">
                <div class="auth-form h-100 d-flex flex-column">
                    <div class="text-center mb-4">
                        <span class="badge">Bước đầu tiên</span>
                        <h2 class="mt-3">Đăng ký tài khoản</h2>
                        <p class="text-muted mb-0">Nhập thông tin của bạn để bắt đầu trải nghiệm cùng FoodApp.</p>
                    </div>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="flex-grow-1 d-flex flex-column">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-3 position-relative">
                            <span class="input-icon"><i class="fas fa-signature"></i></span>
                            <input asp-for="Input.FullName" class="form-control" placeholder="Tên đầy đủ" />
                            <label asp-for="Input.FullName"></label>
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3 position-relative">
                            <span class="input-icon"><i class="fas fa-user"></i></span>
                            <input asp-for="Input.UserName" class="form-control" placeholder="Tên đăng nhập" autocomplete="off" />
                            <label asp-for="Input.UserName"></label>
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3 position-relative">
                            <span class="input-icon"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="name@example.com" />
                            <label asp-for="Input.Email"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3 position-relative">
                            <span class="input-icon"><i class="fas fa-birthday-cake"></i></span>
                            <input asp-for="Input.DateOfBirth" type="date" class="form-control" placeholder="Ngày sinh" />
                            <label asp-for="Input.DateOfBirth"></label>
                            <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3 position-relative">
                            <span class="input-icon"><i class="fas fa-phone"></i></span>
                            <input asp-for="Input.Phone" class="form-control" autocomplete="tel" placeholder="Số điện thoại" />
                            <label asp-for="Input.Phone"></label>
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating position-relative">
                                    <span class="input-icon"><i class="fas fa-lock"></i></span>
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Mật khẩu" />
                                    <label asp-for="Input.Password"></label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating position-relative">
                                    <span class="input-icon"><i class="fas fa-shield-alt"></i></span>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Xác nhận mật khẩu" />
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="auth-cta mt-4">
                            <button id="registerSubmit" type="submit" class="btn btn-primary">Tạo tài khoản</button>
                            <a class="btn btn-outline-secondary" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Đã có tài khoản? Đăng nhập</a>
                        </div>

                        <div class="auth-divider">
                            <span>Hoặc tiếp tục với</span>
                        </div>

                        <div class="social-login">
                            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div class="text-center text-muted small">
                                    Hiện chưa có phương thức đăng ký nhanh được cấu hình.
                                </div>
                            }
                            else
                            {
                                <div class="row g-3">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <div class="col-sm-6">
                                            <button type="submit" class="btn btn-outline-secondary w-100" name="provider" value="@provider.Name" form="external-account">
                                                <i class="fas fa-sign-in-alt me-2"></i>@provider.DisplayName
                                            </button>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </form>

                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-none"></form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
