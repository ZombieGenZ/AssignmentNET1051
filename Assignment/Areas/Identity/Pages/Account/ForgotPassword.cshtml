@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<link href="~/css/auth.css" rel="stylesheet" />

<div class="auth-page">
    <div class="auth-card auth-card--narrow">
        <div class="auth-header">
            <h1>Quên mật khẩu?</h1>
            <p>Nhập email đã đăng ký để chúng tôi gửi hướng dẫn đặt lại mật khẩu cho bạn.</p>
        </div>

        <section class="auth-body">
            <form method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" " />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Gửi liên kết đặt lại</button>
            </form>

            <div class="auth-footer">
                <a asp-page="./Login" class="btn btn-outline-secondary w-100">Quay lại đăng nhập</a>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
