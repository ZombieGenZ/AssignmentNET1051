@model Assignment.ViewModels.Ratings.RatingIndexViewModel

@{
    ViewData["Title"] = "Đánh giá sản phẩm";
    var items = Model?.Items ?? Enumerable.Empty<Assignment.ViewModels.Ratings.RatingItemViewModel>();
}

<div class="container my-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <div>
            <h2 class="mb-1"><i class="fas fa-star text-warning me-2"></i>Đánh giá sản phẩm</h2>
            <p class="text-muted mb-0">Hãy chia sẻ cảm nhận của bạn về những sản phẩm đã mua khi đơn hàng đã hoàn tất.</p>
        </div>
        <a class="btn btn-outline-primary mt-3 mt-md-0" asp-controller="Order" asp-action="History">
            <i class="fas fa-history me-2"></i>Lịch sử đơn hàng
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!items.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-comments fa-4x text-muted mb-3"></i>
            <h4>Bạn chưa có sản phẩm nào để đánh giá.</h4>
            <p class="text-muted">Các đơn hàng phải ở trạng thái <strong>Hoàn tất</strong> thì bạn mới có thể gửi đánh giá.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in items)
            {
                <div class="col-12 col-lg-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-start mb-3">
                                <img src="@(string.IsNullOrWhiteSpace(item.ImageUrl) ? "/images/no-image.jpg" : item.ImageUrl)" alt="@item.ItemName" class="rounded me-3" style="width: 80px; height: 80px; object-fit: cover;">
                                <div>
                                    <h5 class="mb-1">@item.ItemName</h5>
                                    <div class="text-muted small">@item.ItemType • Đơn hàng #@item.OrderId • @item.OrderCreatedAt.ToString("dd/MM/yyyy")</div>
                                    @if (!item.IsAvailable)
                                    {
                                        <span class="badge bg-secondary mt-2">Sản phẩm hiện không khả dụng</span>
                                    }
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="text-muted small">Số lượng: <strong>@item.Quantity</strong> • Giá: <strong>@item.Price.ToString("N0") đ</strong></div>
                            </div>

                            <form asp-action="Submit" method="post" class="mt-auto">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="OrderItemId" value="@item.OrderItemId" />
                                <div class="mb-3">
                                    <label class="form-label fw-semibold" for="score-@item.OrderItemId">Điểm đánh giá</label>
                                    <select class="form-select" id="score-@item.OrderItemId" name="Score" required>
                                        @for (var score = 1; score <= 5; score++)
                                        {
                                            <option value="@score" selected="@(item.Score == score ? "selected" : null)">@score sao</option>
                                        }
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-semibold" for="comment-@item.OrderItemId">Nhận xét</label>
                                    <textarea class="form-control" id="comment-@item.OrderItemId" name="Comment" rows="3" maxlength="2000" placeholder="Chia sẻ trải nghiệm của bạn...">@item.Comment</textarea>
                                    <div class="form-text">Tối đa 2000 ký tự.</div>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i>@(item.Score.HasValue ? "Cập nhật đánh giá" : "Gửi đánh giá")
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
