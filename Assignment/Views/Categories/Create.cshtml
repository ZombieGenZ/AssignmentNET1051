@using Assignment.Models
@using Microsoft.AspNetCore.Identity
@model Assignment.Models.Category
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Tạo danh mục";
    Layout = "_AdminLayout";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4 justify-content-center">
        <div class="col-xl-6 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-1 text-primary">
                                <i class="fas fa-plus-circle me-2"></i>@ViewData["Title"]
                            </h4>
                            <p class="text-muted mb-0">Thiết lập thông tin cơ bản cho danh mục sản phẩm mới.</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="border rounded-3 p-4 mb-4">
                            <h5 class="text-secondary fw-semibold mb-3">Thông tin danh mục</h5>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label asp-for="Name" class="form-label">Tên danh mục</label>
                                    <input asp-for="Name" class="form-control" placeholder="Ví dụ: Cà phê đặc biệt" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label asp-for="Index" class="form-label">Thứ tự hiển thị</label>
                                    <input asp-for="Index" class="form-control" placeholder="Nhập số thứ tự" />
                                    <span asp-validation-for="Index" class="text-danger"></span>
                                    <div class="form-text">Giá trị nhỏ sẽ được ưu tiên hiển thị trước.</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            @if (User.HasAnyPermission("GetCategory", "GetCategoryAll"))
                            {
                                <a class="btn btn-outline-secondary" asp-action="Index">
                                    <i class="fas fa-arrow-left me-2"></i>Trở về
                                </a>
                            }
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu danh mục
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
