@using Assignment.Models
@using Microsoft.AspNetCore.Identity
@using System.Linq
@model Assignment.ViewModels.PagedResult<Assignment.Models.Category>
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Danh sách danh mục";
    Layout = "_AdminLayout";
    var currentPageSize = Model?.PageSize ?? 25;
    var currentPage = Model?.CurrentPage ?? 1;
    var totalPages = Model?.TotalPages ?? 0;
    var totalItems = Model?.TotalItems ?? 0;
    var startItem = Model?.StartItem ?? 0;
    var endItem = Model?.EndItem ?? 0;
    var categories = Model?.Items ?? Enumerable.Empty<Category>();
    var hasData = categories.Any();
    var pageSizeOptions = (Model?.PageSizeOptions != null && Model.PageSizeOptions.Count > 0)
        ? Model.PageSizeOptions
        : new[] { 25, 50, 75, 100 };
    var hasPagination = totalPages > 1;
    var startPage = 1;
    var endPage = totalPages;

    if (totalPages > 0)
    {
        startPage = Math.Max(1, currentPage - 2);
        endPage = Math.Min(totalPages, currentPage + 2);

        if (endPage - startPage < 4)
        {
            if (startPage == 1)
            {
                endPage = Math.Min(totalPages, startPage + 4);
            }
            else if (endPage == totalPages)
            {
                startPage = Math.Max(1, endPage - 4);
            }
        }
    }
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<div class="container-fluid pt-4 px-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <div>
                    <h4 class="mb-1 text-primary">
                        <i class="fas fa-tags me-2"></i>@ViewData["Title"]
                    </h4>
                    <p class="text-muted mb-0">Quản lý danh mục sản phẩm và thứ tự hiển thị.</p>
                </div>
                @if (User.HasPermission("CreateCategory"))
                {
                    <a class="btn btn-primary" asp-action="Create">
                        <i class="fas fa-plus me-2"></i>Tạo mới
                    </a>
                }
            </div>
        </div>
        <div class="card-body">
            @if (TempData["Success"] is string successMessage)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@successMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] is string errorMessage)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@errorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Info"] is string infoMessage)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>@infoMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-3">
                <div class="text-muted small">
                    @if (hasData)
                    {
                        <span>Hiển thị <strong>@startItem</strong> - <strong>@endItem</strong> trong tổng số <strong>@totalItems</strong> danh mục.</span>
                    }
                    else
                    {
                        <span>Không có danh mục nào để hiển thị.</span>
                    }
                </div>
                <form method="get" asp-action="Index" class="d-flex align-items-center gap-2">
                    <input type="hidden" name="page" value="1" />
                    <label class="form-label mb-0" for="pageSizeSelect">Hiển thị</label>
                    <select id="pageSizeSelect" name="pageSize" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()">
                        @foreach (var option in pageSizeOptions)
                        {
                            <option value="@option" selected="@(option == currentPageSize ? "selected" : null)">@option</option>
                        }
                    </select>
                    <span class="text-muted small">bản ghi/trang</span>
                </form>
            </div>

            @if (hasData)
            {
                <div data-bulk-container data-bulk-empty-message="Vui lòng chọn ít nhất một danh mục để xóa." data-bulk-confirm="Bạn có chắc chắn muốn xóa {count} danh mục đã chọn?">
                    <form asp-action="BulkDelete" method="post" data-confirm="Bạn có chắc chắn muốn xóa {count} danh mục đã chọn? Hành động này không thể hoàn tác.">
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex align-items-center gap-3 bulk-actions d-none" data-bulk-actions>
                                <span class="text-muted small">Đã chọn <span data-bulk-count>0</span> danh mục</span>
                                <button type="submit" class="btn btn-sm btn-danger" data-bulk-enable data-bulk-confirm="Bạn có chắc chắn muốn xóa {count} danh mục đã chọn? Hành động này không thể hoàn tác.">
                                    <i class="fas fa-trash-alt me-1"></i>Xóa tất cả
                                </button>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered text-center">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 50px;">
                                            <div class="form-check d-flex justify-content-center mb-0">
                                                <input class="form-check-input" type="checkbox" data-bulk-select-all />
                                            </div>
                                        </th>
                                        <th scope="col">@Html.DisplayNameFor(model => model.Items.First().Name)</th>
                                        <th scope="col">@Html.DisplayNameFor(model => model.Items.First().Index)</th>
                                        <th scope="col" style="width: 20%;">Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in categories)
                                    {
                                        <tr>
                                            <td>
                                                <div class="form-check d-flex justify-content-center mb-0">
                                                    <input class="form-check-input" type="checkbox" name="selectedIds" value="@item.Id" data-bulk-item />
                                                </div>
                                            </td>
                                            <td class="text-start fw-semibold">@item.Name</td>
                                            <td>@item.Index</td>
                                            <td>
                                                <div class="d-flex justify-content-center gap-2">
                                                    @if (User.HasAnyPermission("UpdateCategory", "UpdateCategoryAll"))
                                                    {
                                                        <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id" title="Chỉnh sửa">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    }
                                                    @if (User.HasAnyPermission("GetCategory", "GetCategoryAll"))
                                                    {
                                                        <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id" title="Chi tiết">
                                                            <i class="fas fa-info-circle"></i>
                                                        </a>
                                                    }
                                                    @if (User.HasAnyPermission("DeleteCategory", "DeleteCategoryAll"))
                                                    {
                                                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" title="Xóa">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>

                @if (hasPagination)
                {
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mt-4">
                        <div class="text-muted small">Trang <strong>@currentPage</strong> / <strong>@totalPages</strong></div>
                        <nav aria-label="Điều hướng trang danh mục">
                            <ul class="pagination justify-content-md-end mb-0">
                                <li class="page-item @(currentPage == 1 ? "disabled" : string.Empty)">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-pageSize="@currentPageSize">&laquo;</a>
                                </li>
                                @for (var p = startPage; p <= endPage; p++)
                                {
                                    <li class="page-item @(p == currentPage ? "active" : string.Empty)">
                                        <a class="page-link" asp-action="Index" asp-route-page="@p" asp-route-pageSize="@currentPageSize">@p</a>
                                    </li>
                                }
                                <li class="page-item @(currentPage == totalPages ? "disabled" : string.Empty)">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-pageSize="@currentPageSize">&raquo;</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                    <p class="text-muted mb-0">Chưa có danh mục nào được tạo.</p>
                </div>
            }
        </div>
    </div>
</div>
