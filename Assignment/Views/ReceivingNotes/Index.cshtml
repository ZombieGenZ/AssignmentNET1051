            function mergeMaterials(importedMaterials = []) {
                if (!Array.isArray(importedMaterials) || importedMaterials.length === 0) {
                    return;
                }

                const materialMap = new Map();
                materials.forEach(material => {
                    if (material?.id != null) {
                        materialMap.set(Number(material.id), material);
                    }
                });

                importedMaterials.forEach(material => {
                    if (!material || material.id == null) {
                        return;
                    }

                    const id = Number(material.id);
                    const existing = materialMap.get(id) ?? {};
                    materialMap.set(id, {
                        ...existing,
                        ...material
                    });
                });

                materials = Array.from(materialMap.values());
                materials.sort((a, b) => {
                    const nameA = (a?.name ?? '').toLowerCase();
                    const nameB = (b?.name ?? '').toLowerCase();
                    if (nameA === nameB) {
                        return (a?.code ?? '').localeCompare(b?.code ?? '');
                    }
                    return nameA.localeCompare(nameB);
                });
            }

