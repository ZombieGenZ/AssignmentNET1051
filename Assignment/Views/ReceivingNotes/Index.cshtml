                                }

                                throw new Error('Không thể tải danh sách nguyên vật liệu.');
                            }

                            const data = await response.json();
                            mergeMaterials(Array.isArray(data) ? data : []);

                            return materials.length > 0;
                        } catch (error) {
                            materials = [];
                            throw error;
                        }
                    })();
                }

                try {
                    const hasMaterials = await materialsLoadPromise;
                    if (!hasMaterials) {
                        showFormErrors('Không tìm thấy nguyên vật liệu. Vui lòng tạo nguyên vật liệu trước khi lập phiếu nhập.');
                    }
                    return hasMaterials;
                } catch (error) {
                    showFormErrors(error.message ?? 'Không thể tải danh sách nguyên vật liệu.');
                    return false;
                } finally {
                    materialsLoadPromise = null;
                }
            }

            async function importDetailsFromFile(file) {
                if (!file) {
                    return;
                }

                clearFormErrors();

                if (importBtn) {
                    importBtn.disabled = true;
                    importBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>Đang nhập...';
                }

                const formData = new FormData();
                formData.append('file', file);

                try {
                    const response = await fetch('/api/receiving-notes/details/import', {
                        method: 'POST',
                        headers: {
                            ...(antiForgeryTokenInput?.value ? { 'RequestVerificationToken': antiForgeryTokenInput.value } : {})
                        },
                        body: formData
                    });

                    if (!response.ok) {
                        if (response.status === 400 || response.status === 422) {
                            const problem = await response.json().catch(() => null);
                            const problemErrors = problem?.errors ? Object.values(problem.errors).flat() : [];
                            if (problemErrors.length > 0) {
                                showFormErrors(problemErrors);
                                return;
                            }

                            if (problem?.message) {
                                showFormErrors(problem.message);
                                return;
                            }
                        } else if (response.status === 403) {
                            showFormErrors('Bạn không có quyền nhập chi tiết phiếu nhập từ file.');
                            return;
                        }

                        showFormErrors('Không thể nhập chi tiết phiếu nhập từ file. Vui lòng thử lại sau.');
                        return;
                    }

                    const result = await response.json();
                    const importedDetails = Array.isArray(result?.details) ? result.details : [];
                    const importedMaterials = Array.isArray(result?.materials) ? result.materials : [];

                    if (!importedDetails.length) {
                        showFormErrors('File không chứa dữ liệu chi tiết hợp lệ.');
                        return;
                    }

                    mergeMaterials(importedMaterials);
                    setDetailRows(importedDetails);

                    if (addDetailBtn) {
                        addDetailBtn.disabled = false;
                    }

                    showAlert(`Đã nhập ${importedDetails.length} dòng chi tiết từ file.`, 'success');
                } catch (error) {
                    showFormErrors('Có lỗi xảy ra khi nhập chi tiết phiếu nhập. Vui lòng thử lại sau.');
                } finally {
                    if (importBtn) {
                        importBtn.innerHTML = '<i class="fas fa-file-import me-1"></i>Nhập từ file';
                        importBtn.disabled = false;
                    }

                    if (importInput) {
                        importInput.value = '';
                    }
                }
            }

