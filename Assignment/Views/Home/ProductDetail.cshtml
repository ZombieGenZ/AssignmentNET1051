<div class="product-detail-wrapper">
    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="detail-container">
            @Html.AntiForgeryToken()
            <div class="row g-lg-5 align-items-start">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="product-media">
                        <img src="@product.ProductImageUrl" class="product-detail-image" alt="@product.Name" />
                        @if (discountType == Assignment.Enums.DiscountType.Percent && discountValue.HasValue)
                        {
                            <span class="discount-chip">-@discountValue%</span>
                        }
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="product-content">
                        @if (product.Category != null)
                        {
                            <span class="category-chip">@product.Category.Name</span>
                        }

                        <h1 class="product-title">@product.Name</h1>

                        <div class="rating-large">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Math.Floor(product.AverageEvaluate))
                                {
                                    <i class="fas fa-star"></i>
                                }
                                else if (i - 0.5 <= product.AverageEvaluate)
                                {
                                    <i class="fas fa-star-half-alt"></i>
                                }
                                else
                                {
                                    <i class="far fa-star"></i>
                                }
                            }
                            <span>@product.AverageEvaluate.ToString("0.0") (@product.TotalEvaluate đánh giá)</span>
                        </div>

                        <div class="detail-tags">
                            @if (product.IsSpicy)
                            {
                                <span class="detail-tag detail-tag-hot">🌶️ Cay</span>
                            }
                            @if (product.IsVegetarian)
                            {
                                <span class="detail-tag detail-tag-vegan">🥗 Chay</span>
                            }
                        </div>

                        @{
                            var hasPercentDiscount = discountType == Assignment.Enums.DiscountType.Percent && discountValue.HasValue;
                            var hasFixedDiscount = discountType == Assignment.Enums.DiscountType.FixedAmount && discountValue.HasValue;
                            var hasAmountDiscount = discountType == Assignment.Enums.DiscountType.Amount && discountValue.HasValue;
                            var hasDiscount = discountType != Assignment.Enums.DiscountType.None && discountValue.HasValue;
                            var finalPrice = PriceCalculator.GetProductFinalPrice(product);
                            var originalPrice = defaultType?.Price ?? 0m;
                            var savings = Math.Max((double)originalPrice - finalPrice, 0);
                            var priceDisplay = string.IsNullOrWhiteSpace(product.PriceRange)
                                ? originalPrice.ToString("N0")
                                : product.PriceRange;
                        }

                        <div class="price-section">
                            @if (!hasDiscount)
                            {
                                <div class="final-price">@priceDisplay ₫</div>
                            }
                            else if (hasPercentDiscount)
                            {
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    <span class="badge-large">-@discountValue%</span>
                                    <span class="text-muted small">Ưu đãi theo %</span>
                                </div>
                                <div class="original-price mb-2">@originalPrice.ToString("N0") ₫</div>
                                <div class="final-price">@finalPrice.ToString("N0") ₫</div>
                                @if (savings > 0)
                                {
                                    <div class="price-subtext">
                                        <i class="fas fa-tag me-1"></i> Tiết kiệm @savings.ToString("N0") ₫
                                    </div>
                                }
                            }
                            else if (hasFixedDiscount)
                            {
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    <span class="badge-large">Giá đặc biệt</span>
                                    <span class="text-muted small">Ưu đãi độc quyền</span>
                                </div>
                                <div class="original-price mb-2">@originalPrice.ToString("N0") ₫</div>
                                <div class="final-price">@finalPrice.ToString("N0") ₫</div>
                                @if (savings > 0)
                                {
                                    <div class="price-subtext">
                                        <i class="fas fa-tag me-1"></i> Tiết kiệm @savings.ToString("N0") ₫
                                    </div>
                                }
                            }
                            else if (hasAmountDiscount)
                            {
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    <span class="badge-large">Giảm @discountValue.Value.ToString("N0") ₫</span>
                                    <span class="text-muted small">Ưu đãi theo tiền</span>
                                </div>
                                <div class="original-price mb-2">@originalPrice.ToString("N0") ₫</div>
                                <div class="final-price">@finalPrice.ToString("N0") ₫</div>
                                @if (savings > 0)
                                {
                                    <div class="price-subtext">
                                        <i class="fas fa-tag me-1"></i> Tiết kiệm @savings.ToString("N0") ₫
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="final-price">@priceDisplay ₫</div>
                            }
                        </div>

                        <div class="detail-meta-grid">
                            <div class="info-item">
                                <i class="fas fa-clock"></i>
                                <div>
                                    <strong>Thời gian chuẩn bị</strong>
                                    <span class="info-text">@product.MinPreparationTime phút</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-fire"></i>
                                <div>
                                    <strong>Calories</strong>
                                    <span class="info-text">@product.MinCalories kcal</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-box"></i>
                                <div>
                                    <strong>Tình trạng</strong>
                                    @if (product.TotalStock > 0)
                                    {
                                        <span class="status-positive">Còn hàng (@product.TotalStock sản phẩm)</span>
                                    }
                                    else
                                    {
                                        <span class="status-negative">Hết hàng</span>
                                    }
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-chart-line"></i>
                                <div>
                                    <strong>Đã bán</strong>
                                    <span class="info-text">@product.TotalSold sản phẩm</span>
                                </div>
                            </div>
                        </div>

                        <div class="type-selection">
                            <div class="type-selection-title">
                                <i class="fas fa-list-alt"></i>
                                Chọn loại sản phẩm
                            </div>
                            @if (hasAvailableTypes)
                            {
                                <div class="row g-3">
                                    @foreach (var type in availableTypes)
                                    {
                                        var typeFinalPrice = PriceCalculator.GetProductTypeFinalPrice(type);
                                        var checkboxId = $"product-type-{type.Id}";
                                        var isAvailable = type.Stock > 0;
                                        <div class="col-md-6">
                                            <div class="type-option @(isAvailable ? string.Empty : "type-option-disabled")">
                                                <input type="checkbox"
                                                       class="form-check-input type-checkbox"
                                                       id="@checkboxId"
                                                       value="@type.Id"
                                                       data-name="@type.Name"
                                                       data-price="@typeFinalPrice"
                                                       data-stock="@type.Stock"
                                                       @(isAvailable ? null : "disabled") />
                                                <label class="type-option-card" for="@checkboxId">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <span class="type-option-name">@type.Name</span>
                                                        <span class="type-option-price">@typeFinalPrice.ToString("N0") ₫</span>
                                                    </div>
                                                    <div class="type-option-meta">
                                                        <span><i class="fas fa-clock me-1"></i>@type.PreparationTime phút</span>
                                                        <span><i class="fas fa-fire me-1"></i>@type.Calories kcal</span>
                                                        <span><i class="fas fa-box-open me-1"></i>@(isAvailable ? $"Còn {type.Stock}" : "Hết hàng")</span>
                                                    </div>
                                                    <div class="type-option-badges">
                                                        @if (type.IsSpicy)
                                                        {
                                                            <span class="badge bg-danger text-white">🌶️ Cay</span>
                                                        }
                                                        @if (type.IsVegetarian)
                                                        {
                                                            <span class="badge bg-success text-white">🥗 Chay</span>
                                                        }
                                                    </div>
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div id="typeSelectionError" class="type-selection-error text-danger mt-2 d-none">
                                    Vui lòng chọn ít nhất một loại sản phẩm để tiếp tục.
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning mt-3" role="alert">
                                    Hiện tại sản phẩm này chưa có loại sản phẩm khả dụng.
                                </div>
                            }
                        </div>

                        <div class="detail-actions">
                            <button type="button" class="btn-add-large" onclick="openTypeSelection('cart')" @(hasAvailableTypes ? null : "disabled")>
                                <i class="fas fa-shopping-cart me-2"></i>
                                Thêm vào giỏ hàng
                            </button>
                            <button type="button" class="btn-buy-now" onclick="openTypeSelection('buy')" @(hasAvailableTypes ? null : "disabled")>
                                <i class="fas fa-bolt me-2"></i>Mua ngay
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="detail-extra row g-4">
                <div class="col-lg-6">
                    <div class="description-section h-100">
                        <h3><i class="fas fa-align-left me-2"></i>Mô tả sản phẩm</h3>
                        <p>@product.Description</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="description-section h-100">
                        <h3><i class="fas fa-list-ul me-2"></i>Thành phần</h3>
                        <p>@product.CombinedIngredients</p>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="typeQuantityModal" tabindex="-1" aria-labelledby="typeQuantityModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
