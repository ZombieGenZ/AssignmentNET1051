@model Assignment.ViewModels.Products.ProductDetailViewModel
@using Assignment.Services
@using System.Linq

@{
    var product = Model.Product;
    product.RefreshDerivedFields();
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
    ViewData["Title"] = product.Name;
    var defaultType = product.PrimaryProductType;
    var discountType = defaultType?.DiscountType ?? Assignment.Enums.DiscountType.None;
    var discountValue = defaultType?.Discount;
    var availableTypes = product.ProductTypes?
        .Where(pt => !pt.IsDeleted && pt.IsPublish)
        .OrderBy(pt => pt.Price)
        .ToList()
        ?? new List<Assignment.Models.ProductType>();
    var hasAvailableTypes = availableTypes.Any();
}

