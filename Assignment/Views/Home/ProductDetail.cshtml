            </div>

            <div class="ratings-section" id="ratings-section">
                @{
                    var ratingCounts = Model.RatingCounts ?? new Dictionary<int, int>();
                    var totalRatings = ratingCounts.Values.Sum();
                    var selectedRating = Model.SelectedRatingFilter;
