    .rating-star-button {
        position: relative;
        width: var(--rating-star-size);
        height: var(--rating-star-size);
        border: none;
        background: transparent;
        padding: 0;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.25s ease, filter 0.25s ease, color 0.25s ease;
        color: var(--rating-star-inactive);
