@model Assignment.Models.Order
@{
    ViewData["Title"] = "Thanh toán thành công";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-success">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="text-success">Thanh toán thành công!</h2>
                    <p class="mt-3">Đơn hàng #@Model.Id đã được thanh toán qua PayOS. Trạng thái đơn hàng đã chuyển sang <strong>Paid</strong>.</p>
                    <p class="text-muted">Bạn sẽ được chuyển đến lịch sử đơn hàng trong giây lát.</p>
                    <a asp-action="History" class="btn btn-primary mt-4">
                        <i class="fas fa-history"></i> Xem lịch sử đơn hàng ngay
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            window.location.href = '@Url.Action("History", "Order")';
        }, 3000);
    </script>
}
