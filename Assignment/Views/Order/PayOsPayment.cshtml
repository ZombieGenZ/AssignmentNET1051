@model Assignment.Models.Order
@{
    ViewData["Title"] = "Thanh toán PayOS";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h2 class="mb-3 text-success">
                        <i class="fas fa-university"></i> Thanh toán qua PayOS
                    </h2>
                    <p class="text-muted">Đơn hàng #@Model.Id • Tổng thanh toán <strong class="text-danger">@Model.TotalBill.ToString("N0") đ</strong></p>

                    <div class="alert alert-info text-start" role="alert">
                        <h5 class="alert-heading"><i class="fas fa-info-circle"></i> Thông tin thanh toán</h5>
                        <ul class="mb-0">
                            <li>Vui lòng xác nhận thanh toán PayOS để hoàn tất đơn hàng.</li>
                            <li>Sau khi thanh toán thành công, đơn hàng của bạn sẽ được chuyển sang trạng thái <strong>Paid</strong>.</li>
                        </ul>
                    </div>

                    <div class="table-responsive mt-4">
                        <table class="table table-bordered mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems ?? System.Linq.Enumerable.Empty<Assignment.Models.OrderItem>())
                                {
                                    var name = item.Product?.Name ?? item.Combo?.Name ?? "Không xác định";
                                    <tr>
                                        <td>@name</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.Price.ToString("N0") đ</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <form asp-action="CompletePayOsPayment" method="post" class="d-inline-block mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-check-circle"></i> Xác nhận thanh toán thành công
                        </button>
                    </form>
                    <a asp-action="History" class="btn btn-outline-secondary btn-lg mt-4 ms-lg-3">
                        <i class="fas fa-times-circle"></i> Hủy và xem lịch sử đơn hàng
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
