@using Assignment.Enums
@using System.Linq
@model IEnumerable<Assignment.Models.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "_AdminLayout";
    OrderStatus? statusFilter = ViewBag.StatusFilter is OrderStatus s ? s : (OrderStatus?)null;
    var searchTerm = ViewBag.SearchTerm as string ?? string.Empty;
    var canUpdateStatus = ViewBag.CanUpdateStatus is bool flag && flag;
    var statuses = Enum.GetValues(typeof(OrderStatus)).Cast<OrderStatus>().ToList();
}

@functions {
    private static string GetStatusDisplay(OrderStatus status) => status switch
    {
        OrderStatus.Pending => "Chờ xử lý",
        OrderStatus.Paid => "Đã thanh toán",
        OrderStatus.Processing => "Đang xử lý",
        OrderStatus.Completed => "Hoàn thành",
        OrderStatus.Cancelled => "Đã hủy",
        _ => status.ToString()
    };

    private static string GetStatusBadgeClass(OrderStatus status) => status switch
    {
        OrderStatus.Pending => "bg-warning text-dark",
        OrderStatus.Paid => "bg-info text-dark",
        OrderStatus.Processing => "bg-primary",
        OrderStatus.Completed => "bg-success",
        OrderStatus.Cancelled => "bg-danger",
        _ => "bg-secondary"
    };
}

<div class="container-fluid pt-4 px-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3">
                <div>
                    <h4 class="mb-1 text-primary">
                        <i class="fas fa-receipt me-2"></i>@ViewData["Title"]
                    </h4>
                    <p class="text-muted mb-0">Theo dõi và cập nhật trạng thái đơn hàng của khách hàng.</p>
                </div>
                <form class="row gx-2 gy-2 align-items-end" method="get" asp-action="Manage">
                    <div class="col-12 col-sm-auto">
                        <label class="form-label mb-1" for="search">Tìm kiếm</label>
                        <input type="search" id="search" name="search" value="@searchTerm" class="form-control" placeholder="Tên, email, số điện thoại hoặc mã đơn" />
                    </div>
                    <div class="col-12 col-sm-auto">
                        <label class="form-label mb-1" for="status">Trạng thái</label>
                        <select id="status" name="status" class="form-select">
                            <option value="">Tất cả trạng thái</option>
                            @foreach (var option in statuses)
                            {
                                <option value="@option" selected="@(statusFilter == option ? "selected" : null)">@GetStatusDisplay(option)</option>
                            }
                        </select>
                    </div>
                    <div class="col-12 col-sm-auto d-flex align-items-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-filter me-2"></i>Lọc
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["Success"] is string successMessage)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@successMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Info"] is string infoMessage)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>@infoMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] is string errorMessage)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@errorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th scope="col" style="min-width: 80px;">Mã đơn</th>
                                <th scope="col" style="min-width: 180px;">Khách hàng</th>
                                <th scope="col">Liên hệ</th>
                                <th scope="col">Thời gian</th>
                                <th scope="col">Thanh toán</th>
                                <th scope="col">Tổng cộng</th>
                                <th scope="col" style="width: 160px;">Trạng thái</th>
                                <th scope="col" style="min-width: 220px;">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                var statusClass = GetStatusBadgeClass(order.Status);
                                var paymentDescription = order.PaymentType == PaymentType.PayNow
                                    ? (order.PaymentMethod == PaymentMethodType.Bank ? "Chuyển khoản ngân hàng" : "Thanh toán trực tuyến")
                                    : "Thanh toán khi nhận hàng";
                                <tr>
                                    <td class="fw-semibold">#@order.Id</td>
                                    <td>
                                        <div class="fw-semibold">@order.Name</div>
                                        @if (!string.IsNullOrEmpty(order.Email))
                                        {
                                            <div class="text-muted small">@order.Email</div>
                                        }
                                        @if (order.OrderItems?.Any() == true)
                                        {
                                            <div class="mt-2">
                                                <span class="text-muted small">Sản phẩm:</span>
                                                <ul class="small mb-0 ps-3">
                                                    @foreach (var item in order.OrderItems!)
                                                    {
                                                        var itemName = item.Product?.Name ?? item.Combo?.Name ?? "Không xác định";
                                                        <li>@itemName x @item.Quantity (@string.Format("{0:N0}đ", item.Price))</li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div class="fw-semibold">@order.Phone</div>
                                        @if (!string.IsNullOrWhiteSpace(order.Note))
                                        {
                                            <div class="small text-muted">Ghi chú: @order.Note</div>
                                        }
                                    </td>
                                    <td>
                                        <div>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                                        @if (order.UpdatedAt.HasValue)
                                        {
                                            <div class="small text-muted">Cập nhật: @order.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                                        }
                                    </td>
                                    <td>
                                        <div>@paymentDescription</div>
                                        <div class="small text-muted">Kiểu: @order.PaymentType</div>
                                    </td>
                                    <td>
                                        <div class="fw-semibold text-primary">@string.Format("{0:N0}đ", order.TotalBill)</div>
                                        <div class="small text-muted">Giảm giá: @string.Format("{0:N0}đ", order.Discount)</div>
                                        <div class="small text-muted">VAT: @string.Format("{0:N0}đ", order.Vat)</div>
                                    </td>
                                    <td>
                                        <span class="badge @statusClass px-3 py-2">@GetStatusDisplay(order.Status)</span>
                                    </td>
                                    <td>
                                        <div class="order-actions">
                                            @if (canUpdateStatus)
                                            {
                                                <form asp-action="UpdateStatus" method="post" class="order-actions-form" asp-route-statusFilter="@(statusFilter?.ToString())" asp-route-search="@searchTerm">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@order.Id" />
                                                    <div class="status-select">
                                                        <label class="form-label mb-1" for="status-@order.Id">Trạng thái đơn</label>
                                                        <select class="form-select form-select-sm" id="status-@order.Id" name="status">
                                                            @foreach (var option in statuses)
                                                            {
                                                                <option value="@option" selected="@(order.Status == option ? "selected" : null)">@GetStatusDisplay(option)</option>
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="order-action-buttons">
                                                        <button type="submit" class="btn btn-sm btn-primary">
                                                            <i class="fas fa-save me-1"></i>Lưu thay đổi
                                                        </button>
                                                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@order.Id">
                                                            <i class="fas fa-eye me-1"></i>Xem chi tiết
                                                        </a>
                                                    </div>
                                                </form>
                                            }
                                            else
                                            {
                                                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@order.Id">
                                                    <i class="fas fa-eye me-1"></i>Xem chi tiết
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                    <p class="text-muted mb-0">Không có đơn hàng nào phù hợp với tiêu chí hiện tại.</p>
                </div>
            }
        </div>
    </div>
</div>
