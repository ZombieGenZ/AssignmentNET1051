@using Assignment.Enums
@using System.Linq
@model Assignment.ViewModels.PagedResult<Assignment.Models.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "_AdminLayout";
    OrderStatus? statusFilter = ViewBag.StatusFilter is OrderStatus s ? s : (OrderStatus?)null;
    var searchTerm = ViewBag.SearchTerm as string ?? string.Empty;
    var canUpdateStatus = ViewBag.CanUpdateStatus is bool flag && flag;
    var bulkFormId = "order-bulk-form";
    var statuses = Enum.GetValues(typeof(OrderStatus)).Cast<OrderStatus>().ToList();
    var bulkDefaultStatus = OrderStatus.Processing;
    var pageSize = Model?.PageSize ?? 25;
    var currentPage = Model?.CurrentPage ?? 1;
    var totalPages = Model?.TotalPages ?? 0;
    var totalItems = Model?.TotalItems ?? 0;
    var startItem = Model?.StartItem ?? 0;
    var endItem = Model?.EndItem ?? 0;
    var pageSizeOptions = (Model?.PageSizeOptions != null && Model.PageSizeOptions.Count > 0)
        ? Model.PageSizeOptions
        : new[] { 25, 50, 75, 100 };
    var hasData = Model?.Items?.Any() == true;
    var hasPagination = totalPages > 1;
    var startPage = 1;
    var endPage = totalPages;

    if (totalPages > 0)
    {
        startPage = Math.Max(1, currentPage - 2);
        endPage = Math.Min(totalPages, currentPage + 2);

        if (endPage - startPage < 4)
        {
            if (startPage == 1)
            {
                endPage = Math.Min(totalPages, startPage + 4);
            }
            else if (endPage == totalPages)
            {
                startPage = Math.Max(1, endPage - 4);
            }
        }
    }
}

@functions {
    private static string GetStatusDisplay(OrderStatus status) => status switch
    {
        OrderStatus.Pending => "Chờ xử lý",
        OrderStatus.Paid => "Đã thanh toán",
        OrderStatus.Processing => "Đang xử lý",
        OrderStatus.Completed => "Hoàn thành",
        OrderStatus.Cancelled => "Đã hủy",
        _ => status.ToString()
    };

    private static string GetStatusBadgeClass(OrderStatus status) => status switch
    {
        OrderStatus.Pending => "bg-warning text-dark",
        OrderStatus.Paid => "bg-info text-dark",
        OrderStatus.Processing => "bg-primary",
        OrderStatus.Completed => "bg-success",
        OrderStatus.Cancelled => "bg-danger",
        _ => "bg-secondary"
    };
}

<div class="container-fluid pt-4 px-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="d-flex flex-column flex-xl-row justify-content-between align-items-xl-end gap-3">
                <div>
                    <h4 class="mb-1 text-primary">
                        <i class="fas fa-receipt me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <form class="row gx-2 gy-2 align-items-end" method="get" asp-action="Manage">
                    <input type="hidden" name="page" value="1" />
                    <input type="hidden" name="pageSize" value="@pageSize" />
                    <div class="col-12 col-sm-auto">
                        <label class="form-label mb-1" for="search">Tìm kiếm</label>
                        <input type="search" id="search" name="search" value="@searchTerm" class="form-control" placeholder="Tên, email, số điện thoại hoặc mã đơn" />
                    </div>
                    <div class="col-12 col-sm-auto">
                        <label class="form-label mb-1" for="status">Trạng thái</label>
                        <select id="status" name="status" class="form-select">
                            <option value="">Tất cả trạng thái</option>
                            @foreach (var option in statuses)
                            {
                                <option value="@option" selected="@(statusFilter == option ? "selected" : null)">@GetStatusDisplay(option)</option>
                            }
                        </select>
                    </div>
                    <div class="col-12 col-sm-auto d-flex align-items-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-filter me-2"></i>Lọc
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["Success"] is string successMessage)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@successMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Info"] is string infoMessage)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>@infoMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] is string errorMessage)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@errorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-3">
                <div class="text-muted small">
                    @if (hasData)
                    {
                        <span>Hiển thị <strong>@startItem</strong> - <strong>@endItem</strong> trong tổng số <strong>@totalItems</strong> đơn hàng.</span>
                    }
                    else
                    {
                        <span>Không có đơn hàng nào phù hợp với tiêu chí hiện tại.</span>
                    }
                </div>
                <form method="get" asp-action="Manage" class="d-flex align-items-center gap-2">
                    <input type="hidden" name="status" value="@(statusFilter?.ToString())" />
                    <input type="hidden" name="search" value="@searchTerm" />
                    <input type="hidden" name="page" value="1" />
                    <label class="form-label mb-0" for="pageSizeSelect">Hiển thị</label>
                    <select id="pageSizeSelect" name="pageSize" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()">
                        @foreach (var option in pageSizeOptions)
                        {
                            <option value="@option" selected="@(option == pageSize ? "selected" : null)">@option</option>
                        }
                    </select>
                    <span class="text-muted small">bản ghi/trang</span>
                </form>
            </div>

            @if (hasData)
            {
                if (canUpdateStatus)
                {
                    <form id="@bulkFormId" asp-action="BulkUpdateStatus" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="statusFilter" value="@(statusFilter?.ToString())" />
                        <input type="hidden" name="search" value="@searchTerm" />
                        <input type="hidden" name="page" value="@currentPage" />
                        <input type="hidden" name="pageSize" value="@pageSize" />
                    </form>
                }

                <div class="table-responsive"
                    @if (canUpdateStatus)
                    {
                        <text> data-bulk-container data-bulk-form="@bulkFormId" data-bulk-empty-message="Vui lòng chọn ít nhất một đơn hàng để cập nhật."</text>
                    }>
                    @if (canUpdateStatus)
                    {
                        <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3 mb-3">
                            <div class="d-flex align-items-center gap-3 bulk-actions d-none" data-bulk-actions>
                                <span class="text-muted small">Đã chọn <span data-bulk-count>0</span> đơn hàng</span>
                                <div class="d-flex flex-wrap gap-2 align-items-center">
                                    <select class="form-select form-select-sm w-auto" name="status" form="@bulkFormId" data-bulk-enable>
                                        @foreach (var option in statuses)
                                        {
                                            <option value="@option" selected="@(option == bulkDefaultStatus ? "selected" : null)">@GetStatusDisplay(option)</option>
                                        }
                                    </select>
                                    <button type="submit" class="btn btn-sm btn-primary" form="@bulkFormId" data-bulk-enable>
                                        <i class="fas fa-sync-alt me-1"></i>Cập nhật trạng thái
                                    </button>
                                </div>
                            </div>
                        </div>
                    }

                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                @if (canUpdateStatus)
                                {
                                    <th style="width: 50px;">
                                        <div class="form-check d-flex justify-content-center mb-0">
                                            <input class="form-check-input" type="checkbox" data-bulk-select-all />
                                        </div>
                                    </th>
                                }
                                <th scope="col" style="min-width: 80px;">Mã đơn</th>
                                <th scope="col" style="min-width: 180px;">Khách hàng</th>
                                <th scope="col">Liên hệ</th>
                                <th scope="col">Thời gian</th>
                                <th scope="col">Thanh toán</th>
                                <th scope="col">Tổng cộng</th>
                                <th scope="col" style="width: 160px;">Trạng thái</th>
                                <th scope="col" style="min-width: 220px;">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model!.Items)
                            {
                                var statusClass = GetStatusBadgeClass(order.Status);
                                var paymentDescription = order.PaymentType == PaymentType.PayNow
                                    ? (order.PaymentMethod == PaymentMethodType.Bank ? "Chuyển khoản ngân hàng" : "Thanh toán trực tuyến")
                                    : "Thanh toán khi nhận hàng";
                                <tr>
                                    @if (canUpdateStatus)
                                    {
                                        <td>
                                            <div class="form-check d-flex justify-content-center mb-0">
                                                <input class="form-check-input" type="checkbox" name="selectedIds" value="@order.Id" data-bulk-item form="@bulkFormId" />
                                            </div>
                                        </td>
                                    }
                                    <td class="fw-semibold">#@order.Id</td>
                                    <td>
                                        <div class="fw-semibold">@order.Name</div>
                                        @if (!string.IsNullOrEmpty(order.Email))
                                        {
                                            <div class="text-muted small">@order.Email</div>
                                        }
                                        @if (order.OrderItems?.Any() == true)
                                        {
                                            <div class="mt-2">
                                                <span class="text-muted small">Sản phẩm:</span>
                                                <ul class="small mb-0 ps-3">
                                                    @foreach (var item in order.OrderItems!)
                                                    {
                                                        var itemName = item.Product?.Name ?? item.Combo?.Name ?? "Không xác định";
                                                        <li>@itemName x @item.Quantity (@string.Format("{0:N0}đ", item.Price))</li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div class="fw-semibold">@order.Phone</div>
                                        @if (!string.IsNullOrWhiteSpace(order.Note))
                                        {
                                            <div class="small text-muted">Ghi chú: @order.Note</div>
                                        }
                                    </td>
                                    <td>
                                        <div>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                                        @if (order.UpdatedAt.HasValue)
                                        {
                                            <div class="small text-muted">Cập nhật: @order.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                                        }
                                    </td>
                                    <td>
                                        <div>@paymentDescription</div>
                                        <div class="small text-muted">Kiểu: @order.PaymentType</div>
                                    </td>
                                    <td>
                                        <div class="fw-semibold text-primary">@string.Format("{0:N0}đ", order.TotalBill)</div>
                                        <div class="small text-muted">Giảm giá: @string.Format("{0:N0}đ", order.Discount)</div>
                                        <div class="small text-muted">VAT: @string.Format("{0:N0}đ", order.Vat)</div>
                                    </td>
                                    <td>
                                        <span class="badge @statusClass px-3 py-2">@GetStatusDisplay(order.Status)</span>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column flex-lg-row align-items-stretch align-items-lg-center gap-2 order-actions">
                                            <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@order.Id">
                                                <i class="fas fa-eye me-1"></i>Chi tiết
                                            </a>
                                            @if (canUpdateStatus)
                                            {
                                                <form asp-action="UpdateStatus" method="post" class="d-flex gap-2" asp-route-statusFilter="@(statusFilter?.ToString())" asp-route-search="@searchTerm" asp-route-page="@currentPage" asp-route-pageSize="@pageSize">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@order.Id" />
                                                    <select class="form-select form-select-sm" name="status">
                                                        @foreach (var option in statuses)
                                                        {
                                                            <option value="@option" selected="@(option == order.Status ? "selected" : null)">@GetStatusDisplay(option)</option>
                                                        }
                                                    </select>
                                                    <button type="submit" class="btn btn-sm btn-primary">
                                                        <i class="fas fa-save me-1"></i>Lưu
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (hasPagination)
                {
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mt-4">
                        <div class="text-muted small">Trang <strong>@currentPage</strong> / <strong>@totalPages</strong></div>
                        <nav aria-label="Điều hướng trang đơn hàng">
                            <ul class="pagination justify-content-md-end mb-0">
                                <li class="page-item @(currentPage == 1 ? "disabled" : string.Empty)">
                                    <a class="page-link" asp-action="Manage" asp-route-status="@(statusFilter?.ToString())" asp-route-search="@searchTerm" asp-route-page="@(currentPage - 1)" asp-route-pageSize="@pageSize">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                @for (var p = startPage; p <= endPage; p++)
                                {
                                    <li class="page-item @(p == currentPage ? "active" : string.Empty)">
                                        <a class="page-link" asp-action="Manage" asp-route-status="@(statusFilter?.ToString())" asp-route-search="@searchTerm" asp-route-page="@p" asp-route-pageSize="@pageSize">@p</a>
                                    </li>
                                }
                                <li class="page-item @(currentPage == totalPages ? "disabled" : string.Empty)">
                                    <a class="page-link" asp-action="Manage" asp-route-status="@(statusFilter?.ToString())" asp-route-search="@searchTerm" asp-route-page="@(currentPage + 1)" asp-route-pageSize="@pageSize">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                    <p class="text-muted mb-0">Không tìm thấy đơn hàng nào để hiển thị.</p>
                </div>
            }
        </div>
    </div>
</div>
