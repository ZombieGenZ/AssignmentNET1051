@using Assignment.Enums
@using Assignment.Models
@using Microsoft.AspNetCore.Identity
@using System.Linq
@model Assignment.ViewModels.PagedResult<Assignment.Models.Voucher>
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Danh sách Voucher";
    Layout = "_AdminLayout";
    var pageSize = Model?.PageSize ?? 25;
    var page = Model?.CurrentPage ?? 1;
    var totalPages = Model?.TotalPages ?? 0;
    var totalItems = Model?.TotalItems ?? 0;
    var startItem = Model?.StartItem ?? 0;
    var endItem = Model?.EndItem ?? 0;
    var vouchers = Model?.Items ?? Enumerable.Empty<Voucher>();
    var hasData = vouchers.Any();
    var pageSizeOptions = (Model?.PageSizeOptions != null && Model.PageSizeOptions.Count > 0)
        ? Model.PageSizeOptions
        : new[] { 25, 50, 75, 100 };
    var hasPagination = totalPages > 1;
    var startPage = 1;
    var endPage = totalPages;

    if (totalPages > 0)
    {
        startPage = Math.Max(1, page - 2);
        endPage = Math.Min(totalPages, page + 2);

        if (endPage - startPage < 4)
        {
            if (startPage == 1)
            {
                endPage = Math.Min(totalPages, startPage + 4);
            }
            else if (endPage == totalPages)
            {
                startPage = Math.Max(1, endPage - 4);
            }
        }
    }
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<div class="container-fluid pt-4 px-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <div>
                    <h4 class="mb-1 text-primary">
                        <i class="fas fa-ticket-alt me-2"></i>@ViewData["Title"]
                    </h4>
                    <p class="text-muted mb-0">Theo dõi hiệu lực, phạm vi áp dụng và thông tin sử dụng của các voucher.</p>
                </div>
                @if (User.HasPermission("CreateVoucher"))
                {
                    <a class="btn btn-primary" asp-action="Create">
                        <i class="fas fa-plus me-2"></i>Tạo mới
                    </a>
                }
            </div>
        </div>
        <div class="card-body">
            @if (TempData["Success"] is string successMessage)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@successMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] is string errorMessage)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@errorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Info"] is string infoMessage)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>@infoMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-3">
                <div class="text-muted small">
                    @if (hasData)
                    {
                        <span>Hiển thị <strong>@startItem</strong> - <strong>@endItem</strong> trong tổng số <strong>@totalItems</strong> voucher.</span>
                    }
                    else
                    {
                        <span>Không có voucher nào để hiển thị.</span>
                    }
                </div>
                <form method="get" asp-action="Index" class="d-flex align-items-center gap-2">
                    <input type="hidden" name="page" value="1" />
                    <label class="form-label mb-0" for="pageSizeSelect">Hiển thị</label>
                    <select id="pageSizeSelect" name="pageSize" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()">
                        @foreach (var option in pageSizeOptions)
                        {
                            <option value="@option" selected="@(option == pageSize ? "selected" : null)">@option</option>
                        }
                    </select>
                    <span class="text-muted small">bản ghi/trang</span>
                </form>
            </div>

            @if (hasData)
            {
                <div data-bulk-container data-bulk-empty-message="Vui lòng chọn ít nhất một mã giảm giá để xóa." data-bulk-confirm="Bạn có chắc chắn muốn xóa {count} mã giảm giá đã chọn?">
                    <form asp-action="BulkDelete" method="post" data-confirm="Bạn có chắc chắn muốn xóa {count} mã giảm giá đã chọn? Hành động này không thể hoàn tác.">
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex align-items-center gap-3 bulk-actions d-none" data-bulk-actions>
                                <span class="text-muted small">Đã chọn <span data-bulk-count>0</span> mã giảm giá</span>
                                <button type="submit" class="btn btn-sm btn-danger" data-bulk-enable data-bulk-confirm="Bạn có chắc chắn muốn xóa {count} mã giảm giá đã chọn? Hành động này không thể hoàn tác.">
                                    <i class="fas fa-trash-alt me-1"></i>Xóa tất cả
                                </button>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 50px;">
                                            <div class="form-check d-flex justify-content-center mb-0">
                                                <input class="form-check-input" type="checkbox" data-bulk-select-all />
                                            </div>
                                        </th>
                                        <th>@Html.DisplayNameFor(model => model.Items.First().Code)</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.First().Name)</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.First().Type)</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.First().ProductScope)</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.First().DiscountType)</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.First().Discount)</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.First().Used)</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.First().Quantity)</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.First().IsPublish)</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.First().IsShow)</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.First().MaxCombinedUsageCount)</th>
                                        <th>Thời gian bắt đầu</th>
                                        <th>Thời gian kết thúc</th>
                                        <th style="width: 15%;">Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var voucher in vouchers)
                                    {
                                        <tr>
                                            <td>
                                                <div class="form-check d-flex justify-content-center mb-0">
                                                    <input class="form-check-input" type="checkbox" name="selectedIds" value="@voucher.Id" data-bulk-item />
                                                </div>
                                            </td>
                                            <td class="fw-semibold text-start">@voucher.Code</td>
                                            <td>@voucher.Name</td>
                                            <td>
                                                @if (voucher.Type == VoucherType.Public)
                                                {
                                                    <span class="badge bg-success">Công khai</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">Riêng tư</span>
                                                }
                                            </td>
                                            <td>
                                                @if (voucher.ProductScope == VoucherProductScope.AllProducts)
                                                {
                                                    <span class="badge bg-success">Tất cả sản phẩm</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-primary">Một số sản phẩm</span>
                                                }
                                            </td>
                                            <td>@(voucher.DiscountType == VoucherDiscountType.Money ? "Tiền mặt" : "Phần trăm")</td>
                                            <td>
                                                @if (voucher.DiscountType == VoucherDiscountType.Money)
                                                {
                                                    @voucher.Discount.ToString("C0")
                                                }
                                                else
                                                {
                                                    @($"{voucher.Discount}%")
                                                }
                                            </td>
                                            <td>@voucher.Used.ToString("N0")</td>
                                            <td>@voucher.Quantity.ToString("N0")</td>
                                            <td>
                                                @if (voucher.HasCombinedUsageLimit && voucher.MaxCombinedUsageCount.HasValue)
                                                {
                                                    @voucher.MaxCombinedUsageCount.Value.ToString("N0")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Không giới hạn</span>
                                                }
                                            </td>
                                            <td>
                                                @if (voucher.IsPublish)
                                                {
                                                    <span class="badge bg-success">Bật</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Tắt</span>
                                                }
                                            </td>
                                            <td>
                                                @if (voucher.Type == VoucherType.Public)
                                                {
                                                    if (voucher.IsShow)
                                                    {
                                                        <span class="badge bg-success">Hiển thị</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">Ẩn</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>@voucher.StartTime.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                @if (voucher.IsLifeTime)
                                                {
                                                    <span class="badge bg-warning">Vô thời hạn</span>
                                                }
                                                else
                                                {
                                                    @voucher.EndTime?.ToString("dd/MM/yyyy HH:mm")
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex justify-content-center gap-2">
                                                    @if (User.HasAnyPermission("UpdateVoucher", "UpdateVoucherAll"))
                                                    {
                                                        <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@voucher.Id" title="Chỉnh sửa">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    }
                                                    @if (User.HasAnyPermission("GetVoucher", "GetVoucherAll"))
                                                    {
                                                        <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@voucher.Id" title="Chi tiết">
                                                            <i class="fas fa-info-circle"></i>
                                                        </a>
                                                    }
                                                    @if (User.HasAnyPermission("DeleteVoucher", "DeleteVoucherAll"))
                                                    {
                                                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@voucher.Id" title="Xóa">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>

                @if (hasPagination)
                {
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mt-4">
                        <div class="text-muted small">Trang <strong>@(page)</strong> / <strong>@totalPages</strong></div>
                        <nav aria-label="Điều hướng trang voucher">
                            <ul class="pagination justify-content-md-end mb-0">
                                <li class="page-item @(page == 1 ? "disabled" : string.Empty)">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(page - 1)" asp-route-pageSize="@(pageSize)">&laquo;</a>
                                </li>
                                @for (var p = startPage; p <= endPage; p++)
                                {
                                    <li class="page-item @(p == page ? "active" : string.Empty)">
                                        <a class="page-link" asp-action="Index" asp-route-page="@p" asp-route-pageSize="@(pageSize)">@p</a>
                                    </li>
                                }
                                <li class="page-item @(page == totalPages ? "disabled" : string.Empty)">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(page + 1)" asp-route-pageSize="@(pageSize)">&raquo;</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                    <p class="text-muted mb-0">Chưa có voucher nào được tạo.</p>
                </div>
            }
        </div>
    </div>
</div>
