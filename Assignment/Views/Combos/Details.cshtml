@model Assignment.Models.Combo

@{
    ViewData["Title"] = "Chi tiết Combo";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/detail-pages.css" />
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4 justify-content-center">
        <div class="col-sm-12 col-xl-9 col-xxl-8">
            <div class="detail-card card">
                <div class="detail-card__header">
                    <div class="d-flex align-items-center">
                        <span class="detail-card__icon">
                            <i class="fas fa-boxes-stacked"></i>
                        </span>
                        <div>
                            <h4 class="detail-card__title mb-1">@ViewData["Title"]</h4>
                            <p class="detail-card__subtitle mb-0">Toàn bộ thông tin về combo đang hiển thị trên website</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4 p-lg-5">
                    <div class="row g-4 align-items-start">
                        <div class="col-md-5 col-lg-4">
                            <div class="detail-card__image-wrapper">
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="detail-card__image" />
                            </div>
                        </div>
                        <div class="col-md-7 col-lg-8">
                            <dl class="row detail-meta">
                                <dt class="col-sm-4">Tên combo</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Mô tả</dt>
                                <dd class="col-sm-8 detail-card__description">@Model.Description</dd>

                                <dt class="col-sm-4">Giá gốc</dt>
                                <dd class="col-sm-8 detail-price detail-price--muted">@Model.Price.ToString("C0")</dd>

                                <dt class="col-sm-4">Giá sau giảm</dt>
                                <dd class="col-sm-8 detail-price">@PriceCalculator.GetComboFinalPrice(Model).ToString("C0")</dd>

                                <dt class="col-sm-4">Tồn kho</dt>
                                <dd class="col-sm-8">@Model.Stock.ToString("N0")</dd>

                                <dt class="col-sm-4">Đã bán</dt>
                                <dd class="col-sm-8">@Model.Sold.ToString("N0")</dd>

                                <dt class="col-sm-4">Thứ tự hiển thị</dt>
                                <dd class="col-sm-8">@Model.Index</dd>

                                <dt class="col-sm-4">Hình thức giảm</dt>
                                <dd class="col-sm-8">
                                    @if (Model.DiscountType == Assignment.Enums.DiscountType.Percent)
                                    {
                                        <span>Ưu đãi phần trăm</span>
                                    }
                                    else
                                    {
                                        <span>Không áp dụng</span>
                                    }
                                </dd>

                                @if (Model.DiscountType == Assignment.Enums.DiscountType.Percent && Model.Discount.HasValue)
                                {
                                    <dt class="col-sm-4">Giảm (%)</dt>
                                    <dd class="col-sm-8 detail-price">@Model.Discount%</dd>
                                }

                                <dt class="col-sm-4">Trạng thái</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsPublish)
                                    {
                                        <span class="detail-badge detail-badge--success">
                                            <i class="fas fa-check-circle"></i> Đang bán
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="detail-badge detail-badge--muted">
                                            <i class="fas fa-pause-circle"></i> Ngừng bán
                                        </span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <h5 class="detail-section-title">Danh sách sản phẩm trong combo</h5>
                    @if (Model.ComboItems != null && Model.ComboItems.Any())
                    {
                        <div class="table-responsive">
                            <table class="table detail-table align-middle">
                                <thead>
                                    <tr>
                                        <th>Tên sản phẩm</th>
                                        <th class="text-end">Số lượng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ComboItems)
                                    {
                                        <tr>
                                            <td>@item.Product?.Name</td>
                                            <td class="text-end">@item.Quantity</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Combo này chưa có sản phẩm nào được cấu hình.</p>
                    }
                </div>
                <div class="detail-actions card-footer d-flex flex-wrap gap-2">
                    @if (User.HasAnyPermission("UpdateCombo", "UpdateComboAll"))
                    {
                        <a class="btn btn-brand" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="fas fa-pen-to-square me-2"></i>Chỉnh sửa
                        </a>
                    }
                    @if (User.HasAnyPermission("GetCombo", "GetComboAll"))
                    {
                        <a class="btn btn-outline-brand" asp-action="Index">
                            <i class="fas fa-arrow-left me-2"></i>Trở về danh sách
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
