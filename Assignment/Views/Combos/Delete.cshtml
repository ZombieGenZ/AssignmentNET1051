@model Assignment.Models.Combo

@{
    ViewData["Title"] = "Xóa Combo";
    Layout = "_AdminLayout";
}

<!-- Thêm link Font Awesome để sử dụng icons -->
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4 justify-content-center">
        <div class="col-sm-12 col-xl-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <h5 class="card-title">Bạn có chắc chắn muốn xóa combo này không?</h5>
                    <p>Hành động này không thể hoàn tác.</p>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
                        <dd class="col-sm-9">@Model.Price.ToString("C0")</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ImageUrl)</dt>
                        <dd class="col-sm-9"><img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 150px;" class="img-thumbnail" /></dd>
                    </dl>
                    <hr />
                    <h6>Các sản phẩm trong combo:</h6>
                    @if (Model.ComboItems != null && Model.ComboItems.Any())
                    {
                        <ul>
                            @foreach (var item in Model.ComboItems)
                            {
                                <li>@item.Product?.Name (Số lượng: @item.Quantity)</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">Không có sản phẩm nào trong combo này.</p>
                    }
                </div>
                <div class="card-footer bg-transparent border-top d-flex justify-content-start gap-2">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        @if (User.HasAnyPermission("GetCombo", "GetComboAll"))
                        {
                            <a class="btn btn-secondary" asp-action="Index">
                                <i class="fas fa-times-circle me-2"></i>Hủy
                            </a>
                        }
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt me-2"></i>Xác nhận Xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
