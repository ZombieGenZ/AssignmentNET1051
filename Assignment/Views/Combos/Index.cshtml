@using Assignment.Models
@using Microsoft.AspNetCore.Identity
@using System.Linq
@model Assignment.ViewModels.PagedResult<Assignment.Models.Combo>
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Danh sách Combo";
    Layout = "_AdminLayout";
    var pageSize = Model?.PageSize ?? 25;
    var page = Model?.CurrentPage ?? 1;
    var totalPages = Model?.TotalPages ?? 0;
    var totalItems = Model?.TotalItems ?? 0;
    var startItem = Model?.StartItem ?? 0;
    var endItem = Model?.EndItem ?? 0;
    var combos = Model?.Items ?? Enumerable.Empty<Combo>();
    var hasData = combos.Any();
    var pageSizeOptions = (Model?.PageSizeOptions != null && Model.PageSizeOptions.Count > 0)
        ? Model.PageSizeOptions
        : new[] { 25, 50, 75, 100 };
    var hasPagination = totalPages > 1;
    var startPage = 1;
    var endPage = totalPages;

    if (totalPages > 0)
    {
        startPage = Math.Max(1, page - 2);
        endPage = Math.Min(totalPages, page + 2);

        if (endPage - startPage < 4)
        {
            if (startPage == 1)
            {
                endPage = Math.Min(totalPages, startPage + 4);
            }
            else if (endPage == totalPages)
            {
                startPage = Math.Max(1, endPage - 4);
            }
        }
    }
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<div class="container-fluid pt-4 px-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <div>
                    <h4 class="mb-1 text-primary">
                        <i class="fas fa-layer-group me-2"></i>@ViewData["Title"]
                    </h4>
                    <p class="text-muted mb-0">Quản lý các gói combo và danh sách sản phẩm đi kèm.</p>
                </div>
                @if (User.HasPermission("CreateCombo"))
                {
                    <a class="btn btn-primary" asp-action="Create">
                        <i class="fas fa-plus me-2"></i>Tạo mới
                    </a>
                }
            </div>
        </div>
        <div class="card-body">
            @if (TempData["Success"] is string successMessage)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@successMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] is string errorMessage)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@errorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Info"] is string infoMessage)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>@infoMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-3">
                <div class="text-muted small">
                    @if (hasData)
                    {
                        <span>Hiển thị <strong>@startItem</strong> - <strong>@endItem</strong> trong tổng số <strong>@totalItems</strong> combo.</span>
                    }
                    else
                    {
                        <span>Không có combo nào để hiển thị.</span>
                    }
                </div>
                <form method="get" asp-action="Index" class="d-flex align-items-center gap-2">
                    <input type="hidden" name="page" value="1" />
                    <label class="form-label mb-0" for="pageSizeSelect">Hiển thị</label>
                    <select id="pageSizeSelect" name="pageSize" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()">
                        @foreach (var option in pageSizeOptions)
                        {
                            <option value="@option" selected="@(option == pageSize ? "selected" : null)">@option</option>
                        }
                    </select>
                    <span class="text-muted small">bản ghi/trang</span>
                </form>
            </div>

            @if (hasData)
            {
                <div data-bulk-container data-bulk-empty-message="Vui lòng chọn ít nhất một combo để xóa." data-bulk-confirm="Bạn có chắc chắn muốn xóa {count} combo đã chọn?">
                    <form asp-action="BulkDelete" method="post" data-confirm="Bạn có chắc chắn muốn xóa {count} combo đã chọn? Hành động này không thể hoàn tác.">
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex align-items-center gap-3 bulk-actions d-none" data-bulk-actions>
                                <span class="text-muted small">Đã chọn <span data-bulk-count>0</span> combo</span>
                                <button type="submit" class="btn btn-sm btn-danger" data-bulk-enable data-bulk-confirm="Bạn có chắc chắn muốn xóa {count} combo đã chọn? Hành động này không thể hoàn tác.">
                                    <i class="fas fa-trash-alt me-1"></i>Xóa tất cả
                                </button>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 50px;">
                                            <div class="form-check d-flex justify-content-center mb-0">
                                                <input class="form-check-input" type="checkbox" data-bulk-select-all />
                                            </div>
                                        </th>
                                        <th style="width: 80px;">Ảnh</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.First().Name)</th>
                                        <th>Giá bán</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.First().Stock)</th>
                                        <th>Sản phẩm trong combo</th>
                                        <th style="width: 15%;">Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var combo in combos)
                                    {
                                        var finalPrice = PriceCalculator.GetComboFinalPrice(combo);
                                        <tr>
                                            <td>
                                                <div class="form-check d-flex justify-content-center mb-0">
                                                    <input class="form-check-input" type="checkbox" name="selectedIds" value="@combo.Id" data-bulk-item />
                                                </div>
                                            </td>
                                            <td>
                                                <img style="width: 56px; height: 56px; object-fit: cover;" src="@combo.ImageUrl" alt="@combo.Name" class="rounded" />
                                            </td>
                                            <td class="fw-semibold text-start">@combo.Name</td>
                                            <td>
                                                @if (combo.DiscountType == Assignment.Enums.DiscountType.Percent && combo.Discount.HasValue)
                                                {
                                                    <div class="d-flex flex-column">
                                                        <del class="text-muted small">@combo.Price.ToString("C0")</del>
                                                        <span class="fw-semibold text-danger">@finalPrice.ToString("C0")</span>
                                                        <span class="small text-muted">Giảm @(combo.Discount?.ToString() ?? "0")%</span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="fw-semibold">@finalPrice.ToString("C0")</span>
                                                }
                                            </td>
                                            <td>@combo.Stock</td>
                                            <td class="text-start">
                                                @if (combo.ComboItems.Any())
                                                {
                                                    <ul class="list-unstyled mb-0">
                                                        @foreach (var comboItem in combo.ComboItems)
                                                        {
                                                            var isProduct = comboItem.Product != null;
                                                            var badgeText = isProduct ? "Sản phẩm" : "Combo";
                                                            var badgeClass = isProduct ? "bg-success" : "bg-info";
                                                            var displayName = isProduct
                                                                ? comboItem.Product?.Name ?? $"Sản phẩm #{comboItem.ProductId}"
                                                                : $"Combo #{comboItem.ProductId}";
                                                            var imageUrl = isProduct && !string.IsNullOrWhiteSpace(comboItem.Product?.ProductImageUrl)
                                                                ? comboItem.Product.ProductImageUrl
                                                                : "/images/no-image.jpg";
                                                            <li class="d-flex align-items-center gap-2 mb-2">
                                                                <img style="width: 40px; height: 40px; object-fit: cover;" src="@imageUrl" alt="@displayName" class="rounded" />
                                                                <div class="d-flex flex-column">
                                                                    <div class="d-flex align-items-center gap-2">
                                                                        <span class="badge @badgeClass">@badgeText</span>
                                                                        <span class="fw-semibold">@displayName</span>
                                                                    </div>
                                                                    <span class="text-muted small">Số lượng: @comboItem.Quantity</span>
                                                                </div>
                                                            </li>
                                                        }
                                                    </ul>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa có sản phẩm.</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex justify-content-center gap-2">
                                                    @if (User.HasAnyPermission("UpdateCombo", "UpdateComboAll"))
                                                    {
                                                        <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@combo.Id" title="Chỉnh sửa">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    }
                                                    @if (User.HasAnyPermission("GetCombo", "GetComboAll"))
                                                    {
                                                        <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@combo.Id" title="Chi tiết">
                                                            <i class="fas fa-info-circle"></i>
                                                        </a>
                                                    }
                                                    @if (User.HasAnyPermission("DeleteCombo", "DeleteComboAll"))
                                                    {
                                                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@combo.Id" title="Xóa">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>

                @if (hasPagination)
                {
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mt-4">
                        <div class="text-muted small">Trang <strong>@page</strong> / <strong>@totalPages</strong></div>
                        <nav aria-label="Điều hướng trang combo">
                            <ul class="pagination justify-content-md-end mb-0">
                                <li class="page-item @(page == 1 ? "disabled" : string.Empty)">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(page - 1)" asp-route-pageSize="@pageSize">&laquo;</a>
                                </li>
                                @for (var p = startPage; p <= endPage; p++)
                                {
                                    <li class="page-item @(p == page ? "active" : string.Empty)">
                                        <a class="page-link" asp-action="Index" asp-route-page="@p" asp-route-pageSize="@pageSize">@p</a>
                                    </li>
                                }
                                <li class="page-item @(page == totalPages ? "disabled" : string.Empty)">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(page + 1)" asp-route-pageSize="@pageSize">&raquo;</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-layer-group fa-3x text-muted mb-3"></i>
                    <p class="text-muted mb-0">Chưa có combo nào được tạo.</p>
                </div>
            }
        </div>
    </div>
</div>
