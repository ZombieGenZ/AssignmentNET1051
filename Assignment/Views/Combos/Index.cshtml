@using Assignment.Models
﻿@using Microsoft.AspNetCore.Identity
@model IEnumerable<Assignment.Models.Combo>
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Danh sách Combo";
    Layout = "_AdminLayout";
}

<!-- Thêm link Font Awesome để sử dụng icons -->
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<div class="container-fluid pt-4 px-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-primary">
                <i class="fas fa-box-open me-2"></i>@ViewData["Title"]
            </h4>
            @if (User.HasPermission("CreateCombo"))
            {
                <a class="btn btn-primary" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Tạo mới
                </a>
            }
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered text-center align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 5%;">Ảnh</th>
                            <th style="width: 20%;">@Html.DisplayNameFor(model => model.Name)</th>
                            <th style="width: 10%;">@Html.DisplayNameFor(model => model.Price)</th>
                            <th style="width: 10%;">@Html.DisplayNameFor(model => model.Stock)</th>
                            <th>Sản phẩm trong Combo</th>
                            <th style="width: 15%;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img style="width: 50px; height: 50px; object-fit: cover;" src="@item.ImageUrl" alt="@item.Name" class="img-fluid rounded" /></td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>
                                    @{ var finalPrice = PriceCalculator.GetComboFinalPrice(item); }
                                    @if (item.DiscountType == Assignment.Enums.DiscountType.Percent && item.Discount.HasValue)
                                    {
                                        <del class="text-secondary small">@item.Price.ToString("C0")</del>
                                        <br />
                                        <span class="text-danger fw-bold">@finalPrice.ToString("C0")</span>
                                    }
                                    else
                                    {
                                        @finalPrice.ToString("C0")
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                                <td class="text-start">
                                    @if (item.ComboItems.Any())
                                    {
                                        <ul class="list-unstyled mb-0">
                                            @foreach (var comboItem in item.ComboItems)
                                            {
                                                <li><img style="width: 25px; height: 25px; object-fit: cover;" src="@comboItem.Product.ProductImageUrl" alt="@comboItem.Product.Name" class="img-fluid rounded me-2" /> x@(comboItem.Quantity) @comboItem.Product.Name</li>
                                            }
                                        </ul>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @if (User.HasAnyPermission("UpdateCombo", "UpdateComboAll"))
                                        {
                                            <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id" title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        @if (User.HasAnyPermission("GetCombo", "GetComboAll"))
                                        {
                                            <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id" title="Chi tiết">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                        }
                                        @if (User.HasAnyPermission("DeleteCombo", "DeleteComboAll"))
                                        {
                                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" title="Xóa">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
