@using Assignment.Models
﻿@using Microsoft.AspNetCore.Identity
@model IEnumerable<Assignment.Models.Combo>
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Danh sách Combo";
    Layout = "_AdminLayout";
}

<!-- Thêm link Font Awesome để sử dụng icons -->
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<div class="container-fluid pt-4 px-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-primary">
                <i class="fas fa-box-open me-2"></i>@ViewData["Title"]
            </h4>
            @if (User.HasPermission("CreateCombo"))
            {
                <a class="btn btn-primary" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Tạo mới
                </a>
            }
        </div>
        <div class="card-body">
            @if (TempData["Success"] is string successMessage)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@successMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] is string errorMessage)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@errorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Info"] is string infoMessage)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>@infoMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div data-bulk-container data-bulk-empty-message="Vui lòng chọn ít nhất một combo để xóa." data-bulk-confirm="Bạn có chắc chắn muốn xóa {count} combo đã chọn?">
                <form asp-action="BulkDelete" method="post" data-confirm="Bạn có chắc chắn muốn xóa {count} combo đã chọn? Hành động này không thể hoàn tác.">
                    @Html.AntiForgeryToken()
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex align-items-center gap-3 bulk-actions d-none" data-bulk-actions>
                            <span class="text-muted small">Đã chọn <span data-bulk-count>0</span> combo</span>
                            <button type="submit" class="btn btn-sm btn-danger" data-bulk-enable>
                                <i class="fas fa-trash-alt me-1"></i>Xóa tất cả
                            </button>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered text-center align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 50px;">
                                        <div class="form-check d-flex justify-content-center mb-0">
                                            <input class="form-check-input" type="checkbox" data-bulk-select-all />
                                        </div>
                                    </th>
                                    <th style="width: 5%;">Ảnh</th>
                                    <th style="width: 20%;">@Html.DisplayNameFor(model => model.Name)</th>
                                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.Price)</th>
                                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.Stock)</th>
                                    <th>Sản phẩm trong Combo</th>
                                    <th style="width: 15%;">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="form-check d-flex justify-content-center mb-0">
                                                <input class="form-check-input" type="checkbox" name="selectedIds" value="@item.Id" data-bulk-item />
                                            </div>
                                        </td>
                                        <td><img style="width: 50px; height: 50px; object-fit: cover;" src="@item.ImageUrl" alt="@item.Name" class="img-fluid rounded" /></td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>
                                            @{ var finalPrice = PriceCalculator.GetComboFinalPrice(item); }
                                            @if (item.DiscountType == Assignment.Enums.DiscountType.Percent && item.Discount.HasValue)
                                            {
                                                <del class="text-secondary small">@item.Price.ToString("C0")</del>
                                                <br />
                                                <span class="text-danger fw-bold">@finalPrice.ToString("C0")</span>
                                            }
                                            else
                                            {
                                                @finalPrice.ToString("C0")
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                                        <td class="text-start">
                                            @if (item.ComboItems.Any())
                                            {
                                                <ul class="list-unstyled mb-0">
                                                    @foreach (var comboItem in item.ComboItems)
                                                    {
                                                        var isProduct = comboItem.Product != null;
                                                        var badgeText = isProduct ? "Sản phẩm" : "Combo";
                                                        var badgeClass = isProduct ? "bg-success" : "bg-info";
                                                        var displayName = isProduct
                                                            ? comboItem.Product?.Name ?? $"Sản phẩm #{comboItem.ProductId}"
                                                            : $"Combo #{comboItem.ProductId}";
                                                        var imageUrl = isProduct && !string.IsNullOrWhiteSpace(comboItem.Product?.ProductImageUrl)
                                                            ? comboItem.Product.ProductImageUrl
                                                            : "/images/no-image.jpg";
                                                        <li class="d-flex align-items-center gap-2 mb-2">
                                                            <img style="width: 32px; height: 32px; object-fit: cover;" src="@imageUrl" alt="@displayName" class="img-fluid rounded" />
                                                            <div class="d-flex flex-column">
                                                                <div class="d-flex align-items-center gap-2">
                                                                    <span class="badge @badgeClass">@badgeText</span>
                                                                    <span class="fw-semibold">@displayName</span>
                                                                </div>
                                                                <span class="text-muted small">Số lượng: @comboItem.Quantity</span>
                                                            </div>
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                @if (User.HasAnyPermission("UpdateCombo", "UpdateComboAll"))
                                                {
                                                    <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id" title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                }
                                                @if (User.HasAnyPermission("GetCombo", "GetComboAll"))
                                                {
                                                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id" title="Chi tiết">
                                                        <i class="fas fa-info-circle"></i>
                                                    </a>
                                                }
                                                @if (User.HasAnyPermission("DeleteCombo", "DeleteComboAll"))
                                                {
                                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" title="Xóa">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
