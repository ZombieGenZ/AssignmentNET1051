@model Assignment.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "_AdminLayout";
}

<!-- Thêm link Font Awesome để sử dụng icons -->
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4 justify-content-center">
        <div class="col-sm-12 col-xl-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h4 class="mb-0 text-primary">
                        <i class="fas fa-info-circle me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <img src="@Model.ProductImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm mb-3" />
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Description)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Price)</dt>
                                <dd class="col-sm-8">@Model.Price.ToString("C0")</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Stock)</dt>
                                <dd class="col-sm-8">@Model.Stock.ToString("N0")</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Category)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Name)</dd>

                                <dt class="col-sm-4">Trạng thái</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsPublish)
                                    {
                                        <span class="badge bg-success">Đang bán</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-secondary">Ngừng bán</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DiscountType)</dt>
                                <dd class="col-sm-8">
                                    @if (Model.DiscountType == Assignment.Enums.DiscountType.Percent)
                                    {
                                        <span>Phần trăm</span>
                                    }
                                    else if (Model.DiscountType == Assignment.Enums.DiscountType.FixedAmount)
                                    {

                                        <span>Giá cố định</span>
                                    }
                                    else
                                    {

                                        <span>Không có</span>
                                    }
                                </dd>

                                @if (Model.DiscountType != Assignment.Enums.DiscountType.None)
                                {
                                    <dt class="col-sm-4">Mức giảm</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.DiscountType == Assignment.Enums.DiscountType.Percent)
                                        {
                                            <span>@Model.Discount%</span>
                                        }
                                        else if (Model.DiscountType == Assignment.Enums.DiscountType.FixedAmount)
                                        {

                                            <span>@Model.Discount?.ToString("C0")</span>
                                        }
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top d-flex justify-content-start gap-2">
                    @if (User.HasClaim(c => c.Type == "UpdateProduct" || c.Type == "UpdateProductAll"))
                    {
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="fas fa-edit me-2"></i>Chỉnh sửa
                        </a>
                    }
                    @if (User.HasClaim(c => c.Type == "GetProduct" || c.Type == "GetProductAll"))
                    {
                        <a class="btn btn-secondary" asp-action="Index">
                            <i class="fas fa-arrow-left me-2"></i>Trở về danh sách
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
