@model Assignment.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/detail-pages.css" />
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4 justify-content-center">
        <div class="col-sm-12 col-xl-9 col-xxl-8">
            <div class="detail-card card">
                <div class="detail-card__header">
                    <div class="d-flex align-items-center">
                        <span class="detail-card__icon">
                            <i class="fas fa-utensils"></i>
                        </span>
                        <div>
                            <h4 class="detail-card__title mb-1">@ViewData["Title"]</h4>
                            <p class="detail-card__subtitle mb-0">Thông tin tổng quan về sản phẩm trên cửa hàng</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4 p-lg-5">
                    <div class="row g-4 align-items-start">
                        <div class="col-md-5 col-lg-4">
                            <div class="detail-card__image-wrapper">
                                <img src="@Model.ProductImageUrl" alt="@Model.Name" class="detail-card__image" />
                            </div>
                        </div>
                        <div class="col-md-7 col-lg-8">
                            <dl class="row detail-meta">
                                <dt class="col-sm-4">Tên sản phẩm</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Mô tả</dt>
                                <dd class="col-sm-8 detail-card__description">@Model.Description</dd>

                                <dt class="col-sm-4">Giá niêm yết</dt>
                                <dd class="col-sm-8 detail-price">@Model.Price.ToString("C0")</dd>

                                <dt class="col-sm-4">Tồn kho</dt>
                                <dd class="col-sm-8">@Model.Stock.ToString("N0")</dd>

                                <dt class="col-sm-4">Danh mục</dt>
                                <dd class="col-sm-8">@Model.Category?.Name</dd>

                                <dt class="col-sm-4">Trạng thái</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsPublish)
                                    {
                                        <span class="detail-badge detail-badge--success">
                                            <i class="fas fa-check-circle"></i> Đang bán
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="detail-badge detail-badge--muted">
                                            <i class="fas fa-pause-circle"></i> Ngừng bán
                                        </span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Hình thức giảm</dt>
                                <dd class="col-sm-8">
                                    @if (Model.DiscountType == Assignment.Enums.DiscountType.Percent)
                                    {
                                        <span>Ưu đãi phần trăm</span>
                                    }
                                    else if (Model.DiscountType == Assignment.Enums.DiscountType.FixedAmount)
                                    {
                                        <span>Giảm giá cố định</span>
                                    }
                                    else
                                    {
                                        <span>Không áp dụng</span>
                                    }
                                </dd>

                                @if (Model.DiscountType != Assignment.Enums.DiscountType.None)
                                {
                                    <dt class="col-sm-4">Giá trị ưu đãi</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.DiscountType == Assignment.Enums.DiscountType.Percent)
                                        {
                                            <span class="detail-price">@Model.Discount%</span>
                                        }
                                        else if (Model.DiscountType == Assignment.Enums.DiscountType.FixedAmount)
                                        {
                                            <span class="detail-price">@Model.Discount?.ToString("C0")</span>
                                        }
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="detail-actions card-footer d-flex flex-wrap gap-2">
                    @if (User.HasAnyPermission("UpdateProduct", "UpdateProductAll"))
                    {
                        <a class="btn btn-brand" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="fas fa-pen-to-square me-2"></i>Chỉnh sửa
                        </a>
                    }
                    @if (User.HasAnyPermission("GetProduct", "GetProductAll"))
                    {
                        <a class="btn btn-outline-brand" asp-action="Index">
                            <i class="fas fa-arrow-left me-2"></i>Trở về danh sách
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
