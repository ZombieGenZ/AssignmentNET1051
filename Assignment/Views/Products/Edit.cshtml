@using Assignment.Models
@using Microsoft.AspNetCore.Identity
@model Assignment.Models.Product
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "_AdminLayout";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4 justify-content-center">
        <div class="col-12 col-xl-10">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                        <div>
                            <h4 class="mb-1 text-primary">
                                <i class="fas fa-edit me-2"></i>@ViewData["Title"]
                            </h4>
                            <p class="text-muted mb-0">Cập nhật thông tin sản phẩm và điều chỉnh trạng thái hiển thị.</p>
                        </div>
                        @if (User.HasAnyPermission("GetProduct", "GetProductAll"))
                        {
                            <a class="btn btn-outline-secondary" asp-action="Index">
                                <i class="fas fa-arrow-left me-2"></i>Trở về danh sách
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreateBy" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="border rounded-3 p-4 mb-4">
                            <h5 class="text-secondary fw-semibold mb-3">Thông tin cơ bản</h5>
                            <div class="row g-3">
                                <div class="col-12 col-lg-6">
                                    <label asp-for="Name" class="form-label">Tên sản phẩm</label>
                                    <input asp-for="Name" class="form-control" placeholder="Ví dụ: Trà đào cam sả" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <label asp-for="CategoryId" class="form-label">Danh mục</label>
                                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Description" class="form-label">Mô tả sản phẩm</label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả hương vị, khẩu phần và điểm đặc biệt"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <label asp-for="ProductImageUrl" class="form-label">Hình ảnh</label>
                                    <input asp-for="ProductImageUrl" class="form-control" type="text" placeholder="Đường dẫn hình ảnh" />
                                    <span asp-validation-for="ProductImageUrl" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <label asp-for="Ingredients" class="form-label">Thành phần chính</label>
                                    <textarea asp-for="Ingredients" class="form-control" rows="2" placeholder="Liệt kê thành phần"></textarea>
                                    <span asp-validation-for="Ingredients" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="border rounded-3 p-4 mb-4">
                            <h5 class="text-secondary fw-semibold mb-3">Giá bán & tồn kho</h5>
                            <div class="row g-3">
                                <div class="col-12 col-md-4">
                                    <label asp-for="Price" class="form-label">Giá gốc</label>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" placeholder="Nhập giá" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-4">
                                    <label asp-for="Stock" class="form-label">Tồn kho</label>
                                    <input asp-for="Stock" class="form-control" type="number" min="0" placeholder="Số lượng tồn" />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-4">
                                    <label asp-for="DiscountType" class="form-label">Loại khuyến mãi</label>
                                    <select asp-for="DiscountType" class="form-select" id="DiscountType" asp-items="Html.GetEnumSelectList<Assignment.Enums.DiscountType>()"></select>
                                    <span asp-validation-for="DiscountType" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-4" id="DiscountField" style="display: none;">
                                    <label asp-for="Discount" class="form-label">Mức giảm</label>
                                    <input asp-for="Discount" class="form-control" type="number" id="DiscountInput" placeholder="Nhập giá trị giảm" />
                                    <span asp-validation-for="Discount" class="text-danger"></span>
                                    <div class="form-text" id="DiscountHint"></div>
                                </div>
                            </div>
                        </div>

                        <div class="border rounded-3 p-4 mb-4">
                            <h5 class="text-secondary fw-semibold mb-3">Thời gian chuẩn bị & dinh dưỡng</h5>
                            <div class="row g-3">
                                <div class="col-12 col-md-4">
                                    <label asp-for="PreparationTime" class="form-label">Thời gian chuẩn bị (phút)</label>
                                    <input asp-for="PreparationTime" class="form-control" type="number" min="0" placeholder="Ví dụ: 7" />
                                    <span asp-validation-for="PreparationTime" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-4">
                                    <label asp-for="Calories" class="form-label">Calories (kcal)</label>
                                    <input asp-for="Calories" class="form-control" type="number" min="0" placeholder="Ví dụ: 150" />
                                    <span asp-validation-for="Calories" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="border rounded-3 p-4 mb-4">
                            <h5 class="text-secondary fw-semibold mb-3">Tùy chọn hiển thị</h5>
                            <div class="d-flex flex-wrap gap-4">
                                <div class="form-check form-switch">
                                    <input asp-for="IsSpicy" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsSpicy" class="form-check-label">Cay</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input asp-for="IsVegetarian" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsVegetarian" class="form-check-label">Chay</label>
                                </div>
                                <div class="form-check form-switch">
                                    <input asp-for="IsPublish" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsPublish" class="form-check-label">Hiển thị trên menu</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const discountTypeSelect = document.getElementById('DiscountType');
            const discountField = document.getElementById('DiscountField');
            const discountInput = document.getElementById('DiscountInput');
            const discountHint = document.getElementById('DiscountHint');

            function toggleDiscountField() {
                const discountType = discountTypeSelect.value;

                if (discountType === '0') {
                    discountField.style.display = 'none';
                    discountInput.value = '';
                    discountInput.removeAttribute('required');
                    discountHint.textContent = '';
                } else {
                    discountField.style.display = 'block';
                    discountInput.setAttribute('required', 'required');

                    if (discountType === '1') {
                        discountInput.setAttribute('max', '100');
                        discountInput.setAttribute('min', '0');
                        discountHint.textContent = 'Nhập phần trăm giảm (0 - 100).';
                    } else {
                        discountInput.removeAttribute('max');
                        discountInput.setAttribute('min', '0');
                        discountHint.textContent = 'Nhập giá sau khi giảm hoặc số tiền giảm cố định.';
                    }
                }
            }

            discountTypeSelect.addEventListener('change', toggleDiscountField);
            toggleDiscountField();
        });
    </script>
}
