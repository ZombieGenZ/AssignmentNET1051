@using Microsoft.AspNetCore.Identity
@model Assignment.Models.Product
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "_AdminLayout";
}

<!-- Thêm link Font Awesome để sử dụng icons -->
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4 justify-content-center">
        <div class="col-sm-12 col-xl-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h4 class="mb-0 text-primary">
                        <i class="fas fa-edit me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreateBy" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label"></label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả chi tiết về sản phẩm"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label">Danh mục</label>
                                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ProductImageUrl" class="form-label"></label>
                                    <input asp-for="ProductImageUrl" class="form-control" type="text" placeholder="Nhập URL hình ảnh">
                                    <span asp-validation-for="ProductImageUrl" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Ingredients" class="form-label"></label>
                                    <textarea asp-for="Ingredients" class="form-control" placeholder="Liệt kê thành phần"></textarea>
                                    <span asp-validation-for="Ingredients" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="Price" class="form-label"></label>
                                            <input asp-for="Price" class="form-control" type="number" placeholder="Giá gốc">
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="Stock" class="form-label"></label>
                                            <input asp-for="Stock" class="form-control" type="number" placeholder="Số lượng tồn kho">
                                            <span asp-validation-for="Stock" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="DiscountType" class="form-label"></label>
                                            <select asp-for="DiscountType" class="form-select" id="DiscountType" asp-items="Html.GetEnumSelectList<Assignment.Enums.DiscountType>()"></select>
                                            <span asp-validation-for="DiscountType" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3" id="DiscountField" style="display: none;">
                                            <label asp-for="Discount" class="form-label"></label>
                                            <input asp-for="Discount" class="form-control" type="number" id="DiscountInput" placeholder="Mức giảm">
                                            <span asp-validation-for="Discount" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="PreparationTime" class="form-label"></label>
                                            <input asp-for="PreparationTime" class="form-control" type="number" placeholder="Phút">
                                            <span asp-validation-for="PreparationTime" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="Calories" class="form-label"></label>
                                            <input asp-for="Calories" class="form-control" type="number" placeholder="Kcal">
                                            <span asp-validation-for="Calories" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3 d-flex gap-4 pt-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="IsSpicy" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsSpicy" class="form-check-label"></label>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input asp-for="IsVegetarian" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsVegetarian" class="form-check-label"></label>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input asp-for="IsPublish" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsPublish" class="form-check-label"></label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-top d-flex justify-content-end gap-2">
                            @if (User.HasClaim(c => c.Type == "GetProduct" || c.Type == "GetProductAll"))
                            {
                                <a class="btn btn-secondary" asp-action="Index">
                                    <i class="fas fa-arrow-left me-2"></i>Trở về
                                </a>
                            }
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            function toggleDiscountField() {
                var discountType = document.getElementById('DiscountType').value;
                var discountField = document.getElementById('DiscountField');
                var discountInput = document.getElementById('DiscountInput');
                // 0 = None
                if (discountType === '0') {
                    discountField.style.display = 'none';
                    discountInput.value = '';
                    discountInput.removeAttribute('required');
                } else {
                    discountField.style.display = 'block';
                    discountInput.setAttribute('required', 'required');
                    // 1 = Percent
                    if (discountType === '1') {
                        discountInput.setAttribute('max', '100');
                        discountInput.setAttribute('min', '0');
                    } else {
                        discountInput.removeAttribute('max');
                        discountInput.setAttribute('min', '0');
                    }
                }
            }

            document.getElementById('DiscountType').addEventListener('change', toggleDiscountField);
            // Initial check on page load
            toggleDiscountField();
        });
    </script>
}
