                const formData = new FormData();
                formData.append('file', file);

                try {
                    const response = await fetch('/api/products/types/import', {
                        method: 'POST',
                        headers: {
                            ...(antiForgeryToken ? { 'RequestVerificationToken': antiForgeryToken } : {})
                        },
                        body: formData
