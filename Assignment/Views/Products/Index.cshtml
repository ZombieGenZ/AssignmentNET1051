@using Assignment.Models
﻿@using Microsoft.AspNetCore.Identity
@model IEnumerable<Assignment.Models.Product>
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "_AdminLayout";
}

<!-- Thêm link Font Awesome để sử dụng icons -->
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<div class="container-fluid pt-4 px-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-primary">
                <i class="fas fa-box-open me-2"></i>@ViewData["Title"]
            </h4>
            @if (User.HasPermission("CreateProduct"))
            {
                <a class="btn btn-primary" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Tạo mới
                </a>
            }
        </div>
        <div class="card-body">
            @if (TempData["Success"] is string successMessage)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@successMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] is string errorMessage)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@errorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Info"] is string infoMessage)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>@infoMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div data-bulk-container data-bulk-empty-message="Vui lòng chọn ít nhất một sản phẩm để xóa." data-bulk-confirm="Bạn có chắc chắn muốn xóa {count} sản phẩm đã chọn?">
                <form asp-action="BulkDelete" method="post" data-confirm="Bạn có chắc chắn muốn xóa {count} sản phẩm đã chọn? Hành động này không thể hoàn tác.">
                    @Html.AntiForgeryToken()
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex align-items-center gap-3 bulk-actions d-none" data-bulk-actions>
                            <span class="text-muted small">Đã chọn <span data-bulk-count>0</span> sản phẩm</span>
                            <button type="submit" class="btn btn-sm btn-danger" data-bulk-enable data-bulk-confirm="Bạn có chắc chắn muốn xóa {count} sản phẩm đã chọn? Hành động này không thể hoàn tác.">
                                <i class="fas fa-trash-alt me-1"></i>Xóa tất cả
                            </button>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered text-center">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 50px;">
                                        <div class="form-check d-flex justify-content-center mb-0">
                                            <input class="form-check-input" type="checkbox" data-bulk-select-all />
                                        </div>
                                    </th>
                                    <th scope="col" style="width: 8%;">Hình ảnh</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.Price)</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.Stock)</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.Category)</th>
                                    <th scope="col" style="width: 15%;">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="form-check d-flex justify-content-center mb-0">
                                                <input class="form-check-input" type="checkbox" name="selectedIds" value="@item.Id" data-bulk-item />
                                            </div>
                                        </td>
                                        <td><img style="width: 50px; height: 50px; object-fit: cover;" src="@item.ProductImageUrl" alt="@item.Name" class="img-thumbnail" /></td>
                                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td class="align-middle">
                                            @if (item.DiscountType == Assignment.Enums.DiscountType.None)
                                            {
                                                @item.Price.ToString("C0")
                                            }
                                            else if (item.DiscountType == Assignment.Enums.DiscountType.Percent)
                                            {
                                                <del class="text-secondary small">@item.Price.ToString("C0")</del>
                                                <span class="text-danger fw-bold">@((item.Price - (item.Price / 100 * item.Discount))?.ToString("C0"))</span>
                                            }
                                            else if (item.DiscountType == Assignment.Enums.DiscountType.FixedAmount)
                                            {
                                                <del class="text-secondary small">@item.Price.ToString("C0")</del>
                                                <span class="text-danger fw-bold">@item.Discount?.ToString("C0")</span>
                                            }
                                        </td>
                                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Stock)</td>
                                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Category.Name)</td>
                                        <td class="align-middle">
                                            <div class="btn-group" role="group">
                                                @if (User.HasAnyPermission("UpdateProduct", "UpdateProductAll"))
                                                {
                                                    <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id" title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                }
                                                @if (User.HasAnyPermission("GetProduct", "GetProductAll"))
                                                {
                                                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id" title="Chi tiết">
                                                        <i class="fas fa-info-circle"></i>
                                                    </a>
                                                }
                                                @if (User.HasAnyPermission("DeleteProduct", "DeleteProductAll"))
                                                {
                                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" title="Xóa">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
