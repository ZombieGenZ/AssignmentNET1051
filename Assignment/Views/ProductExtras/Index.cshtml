            function revokeTemporaryImageUrl() {
                if (temporaryImageObjectUrl) {
                    URL.revokeObjectURL(temporaryImageObjectUrl);
                    temporaryImageObjectUrl = null;
                }
            }

            function normalizeImageUrlValue(value) {
                if (!value) {
                    return '';
                }
                return value.trim();
            }

            function isValidImageUrl(url) {
                if (!url) {
                    return false;
                }

                try {
                    const parsed = new URL(url, window.location.origin);
                    return parsed.protocol === 'http:' || parsed.protocol === 'https:';
                } catch (error) {
                    return false;
                }
            }

            function applyImageUrl(url, mode = 'default') {
                const normalized = normalizeImageUrlValue(url);
                if (imageUrlInput) {
                    imageUrlInput.value = normalized;
                }

                if (!normalized) {
                    showProductExtraImagePlaceholder();
                    setImageUploadFeedback(defaultImageFeedback, 'muted');
                    return;
                }

                if (!isValidImageUrl(normalized)) {
                    showProductExtraImagePlaceholder();
                    setImageUploadFeedback('URL ảnh không hợp lệ. Vui lòng nhập đường dẫn bắt đầu bằng http hoặc https.', 'error');
                    return;
                }

                showProductExtraImage(normalized);

                let message = defaultImageFeedback || 'Tải ảnh lên hoặc nhập URL ảnh định dạng JPG, PNG, GIF hoặc WEBP (tối đa 5MB).';
                let tone = 'muted';

                switch (mode) {
                    case 'existing':
                        message = 'Ảnh hiện tại sẽ được giữ nguyên nếu bạn không tải ảnh mới.';
                        break;
                    case 'upload-success':
                        message = 'Ảnh đã được tải lên thành công.';
                        tone = 'success';
                        break;
                    case 'manual-pending':
                        message = 'Ảnh sẽ được sử dụng khi lưu.';
                        break;
                    case 'manual-confirmed':
                        message = 'URL ảnh đã được cập nhật.';
                        tone = 'success';
                        break;
                    default:
                        break;
                }

                setImageUploadFeedback(message, tone);
            }

            function resetImageUploadState() {
                revokeTemporaryImageUrl();
                setImageUploadLoading(false);
                if (imageFileInput) {
                    imageFileInput.value = '';
                }
                applyImageUrl('', 'default');
            }

            function validateImageFile(file) {
                if (!file) {
                    return 'Vui lòng chọn một file ảnh hợp lệ.';
                }

                if (file.size > MAX_IMAGE_SIZE) {
                    return 'Ảnh vượt quá dung lượng cho phép (tối đa 5MB).';
                }

                const allowedTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'];
                const allowedExtensions = ['.jpg', '.jpeg', '.png', '.gif', '.webp'];
                const fileType = (file.type || '').toLowerCase();
                const dotIndex = file.name.lastIndexOf('.');
                const extension = dotIndex >= 0 ? file.name.substring(dotIndex).toLowerCase() : '';
                const isTypeValid = allowedTypes.includes(fileType);
                const isExtensionValid = allowedExtensions.includes(extension);

                if (!isTypeValid && !isExtensionValid) {
                    return 'Vui lòng chọn file ảnh định dạng JPG, PNG, GIF hoặc WEBP.';
                }

                return '';
            }

            async function handleImageFileChange(event) {
                const file = event?.target?.files ? event.target.files[0] : null;

                if (!file) {
                    if (imageUrlInput && imageUrlInput.value) {
                        applyImageUrl(imageUrlInput.value, 'existing');
                    } else {
                        applyImageUrl('', 'default');
                    }
                    return;
                }

                const validationMessage = validateImageFile(file);
                if (validationMessage) {
                    setImageUploadFeedback(validationMessage, 'error');
                    if (imageFileInput) {
                        imageFileInput.value = '';
                    }
                    if (imageUrlInput && imageUrlInput.value) {
                        applyImageUrl(imageUrlInput.value, 'existing');
                    } else {
                        showProductExtraImagePlaceholder();
                    }
                    return;
                }

                revokeTemporaryImageUrl();
                temporaryImageObjectUrl = URL.createObjectURL(file);
                showProductExtraImage(temporaryImageObjectUrl);
                setImageUploadFeedback('Đang tải ảnh lên...', 'muted');
                setImageUploadLoading(true);

                const previousUrl = imageUrlInput ? imageUrlInput.value : '';

                const formData = new FormData();
                formData.append('file', file);

                try {
                    const response = await fetch(IMAGE_UPLOAD_URL, {
                        method: 'POST',
                        headers: {
                            ...(antiForgeryToken ? { 'RequestVerificationToken': antiForgeryToken } : {})
                        },
                        body: formData
                    });

                    if (!response.ok) {
                        const errorResponse = await response.json().catch(() => null);
                        const message = errorResponse?.message || 'Không thể tải ảnh lên. Vui lòng thử lại sau.';
                        throw new Error(message);
                    }

                    const result = await response.json();
                    if (!result || !result.url) {
                        throw new Error('Máy chủ không trả về đường dẫn ảnh.');
                    }

                    revokeTemporaryImageUrl();
                    applyImageUrl(result.url, 'upload-success');
                } catch (error) {
                    revokeTemporaryImageUrl();
                    const previous = normalizeImageUrlValue(previousUrl);
                    if (previous && isValidImageUrl(previous)) {
                        showProductExtraImage(previous);
                        if (imageUrlInput) {
                            imageUrlInput.value = previous;
                        }
                    } else {
                        applyImageUrl('', 'default');
                    }

                    const message = error instanceof Error
                        ? error.message
                        : 'Không thể tải ảnh lên. Vui lòng thử lại sau.';
                    setImageUploadFeedback(message, 'error');
                } finally {
                    setImageUploadLoading(false);
                    if (imageFileInput) {
                        imageFileInput.value = '';
                    }
                }
            }

            function handleManualImageUrl({ forceConfirm = false } = {}) {
                if (!imageUrlInput) {
                    return;
                }

                const value = normalizeImageUrlValue(imageUrlInput.value);
                if (imageUrlInput.value !== value) {
                    imageUrlInput.value = value;
                }

                if (!value) {
                    applyImageUrl('', 'default');
                    return;
                }

                if (!isValidImageUrl(value)) {
                    showProductExtraImagePlaceholder();
                    const message = forceConfirm
                        ? 'URL ảnh không hợp lệ. Vui lòng nhập đường dẫn bắt đầu bằng http hoặc https.'
                        : 'Nhập URL ảnh đầy đủ để xem trước.';
                    setImageUploadFeedback(message, forceConfirm ? 'error' : 'muted');
                    return;
                }

                applyImageUrl(value, forceConfirm ? 'manual-confirmed' : 'manual-pending');
            }

            if (imageFileInput) {
                imageFileInput.addEventListener('change', handleImageFileChange);
            }

            if (imageUrlInput) {
                imageUrlInput.addEventListener('input', () => handleManualImageUrl({ forceConfirm: false }));
                imageUrlInput.addEventListener('blur', () => handleManualImageUrl({ forceConfirm: true }));
