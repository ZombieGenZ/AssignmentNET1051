            function calculateFinalPrice(extra) {
                const basePrice = Number(extra?.price ?? 0);
                const discountType = Number(extra?.discountType ?? @((int)DiscountType.None));
                const discount = Number(extra?.discount ?? 0);

                if (discountType === @((int)DiscountType.Percent)) {
                    return Math.max(0, basePrice - (basePrice * discount / 100));
                }

                if (discountType === @((int)DiscountType.FixedAmount)) {
                    return Math.max(0, discount);
                }

                if (discountType === @((int)DiscountType.Amount)) {
                    return Math.max(0, basePrice - discount);
                }

                return basePrice;
            }

            function normalizeProductOption(option) {
                if (!option || typeof option !== 'object') {
                    return null;
                }

                const rawId = option.id ?? option.Id;
                const numericId = Number(rawId);
                const normalizedId = Number.isFinite(numericId) ? numericId : (rawId ?? null);

                if (normalizedId === null || normalizedId === undefined || normalizedId === '') {
                    return null;
                }

                return {
                    id: normalizedId,
                    name: option.name ?? option.Name ?? `Sản phẩm #${normalizedId}`,
                    categoryName: option.categoryName ?? option.CategoryName ?? null,
                    isPublish: Boolean(option.isPublish ?? option.IsPublish)
                };
            }

            function mergeProductOptions(options = []) {
                if (!Array.isArray(options) || options.length === 0) {
                    return;
                }

                const normalized = options
                    .map(normalizeProductOption)
                    .filter(option => option !== null);

                if (normalized.length === 0) {
                    return;
                }

                const map = new Map();

                if (Array.isArray(productOptions) && productOptions.length > 0) {
                    productOptions.forEach(option => {
                        if (option && option.id !== undefined && option.id !== null) {
                            map.set(String(option.id), option);
                        }
                    });
                }

                normalized.forEach(option => {
                    map.set(String(option.id), option);
                });

                productOptions = Array.from(map.values())
                    .sort((a, b) => a.name.localeCompare(b.name, 'vi'));
            }

            function findProductOptionById(id) {
                if (!Array.isArray(productOptions) || productOptions.length === 0) {
                    return null;
                }

                const numericId = Number(id);
                return productOptions.find(option => {
                    if (Number.isFinite(numericId)) {
                        return Number(option.id) === numericId;
                    }

                    return String(option.id) === String(id);
                }) ?? null;
            }

            function populateProductSelectOptions(selectElement, selectedOption = null) {
                if (!selectElement) {
                    return;
                }

                const fallbackValue = selectedOption?.id ?? selectElement.value ?? '';
                const fallbackLabel = selectedOption?.name ?? selectElement.selectedOptions?.[0]?.textContent ?? '';
                const normalizedFallback = fallbackValue !== null && fallbackValue !== undefined
                    ? String(fallbackValue)
                    : '';

                selectElement.innerHTML = '<option value="">-- Chọn sản phẩm --</option>';

                if (Array.isArray(productOptions) && productOptions.length > 0) {
                    productOptions.forEach(option => {
                        const optionElement = document.createElement('option');
                        optionElement.value = String(option.id);
                        const category = option.categoryName ? ` (${option.categoryName})` : '';
                        const status = option.isPublish ? '' : ' - Nháp';
                        optionElement.textContent = `${option.name}${category}${status}`;

                        if (normalizedFallback && String(option.id) === normalizedFallback) {
                            optionElement.selected = true;
                        }

                        selectElement.appendChild(optionElement);
                    });
                }

                if (normalizedFallback && selectElement.value !== normalizedFallback) {
                    const fallbackOption = document.createElement('option');
                    fallbackOption.value = normalizedFallback;
                    const label = fallbackLabel || (Number.isFinite(Number(normalizedFallback))
                        ? `Sản phẩm #${normalizedFallback}`
                        : 'Sản phẩm');
                    fallbackOption.textContent = `${label} (không có trong danh sách)`;
                    fallbackOption.selected = true;
                    fallbackOption.dataset.fallback = 'true';
                    selectElement.appendChild(fallbackOption);
                }
            }

            function toggleProductEmptyState() {
                if (!productsContainer || !productsEmptyState) {
                    return;
