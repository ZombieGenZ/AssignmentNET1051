            function refreshProductSelectOptions() {
                if (!productsContainer) {
                    toggleProductEmptyState();
                    return;
                }

                const selects = Array.from(productsContainer.querySelectorAll('.product-extra-product-select'));
                const selectedValues = new Set(selects.map(select => select.value).filter(value => value));

                selects.forEach(select => {
                    const currentValue = select.value;
                    Array.from(select.options).forEach(option => {
                        if (!option.value) {
                            option.disabled = false;
                            return;
                        }

                        if (option.dataset.fallback === 'true') {
                            option.disabled = false;
                            return;
                        }

                        option.disabled = option.value !== currentValue && selectedValues.has(option.value);
                    });
                });

                toggleProductEmptyState();
            }

            function updateProductControlStates() {
                if (addProductBtn) {
                    const options = Array.isArray(productOptions) ? productOptions : [];
                    const selectedValues = productsContainer
                        ? new Set(Array.from(productsContainer.querySelectorAll('.product-extra-product-select'))
                            .map(select => select.value)
                            .filter(value => value))
                        : new Set();

                    const availableOptions = options.filter(option => !selectedValues.has(String(option.id)));
                    addProductBtn.disabled = availableOptions.length === 0;
                }

                if (clearProductBtn) {
                    const hasRows = Boolean(productsContainer?.querySelector('.product-extra-product-row'));
                    clearProductBtn.disabled = !hasRows;
