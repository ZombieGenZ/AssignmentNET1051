                removeBtn.addEventListener('click', () => {
                    row.remove();
                    refreshProductSelectOptions();
                    updateProductControlStates();
                });
                actionCol.appendChild(removeBtn);

                row.appendChild(selectCol);
                row.appendChild(actionCol);

                return row;
