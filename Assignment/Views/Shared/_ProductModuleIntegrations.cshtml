@{
    Layout = null;
    var receivingUrl = Url.Action("Index", "ReceivingNotes");
    var inventoryUrl = Url.Action("Index", "Inventories");
    var recipesUrl = Url.Action("Index", "Recipes");
}

<div class="alert alert-info module-integrations" role="status">
    <div class="d-flex flex-column flex-xl-row align-items-xl-center gap-3">
        <div class="d-flex align-items-start gap-3">
            <div class="module-integrations-icon rounded-circle bg-primary-subtle text-primary">
                <i class="fas fa-diagram-project"></i>
            </div>
            <div>
                <h6 class="mb-1 fw-semibold">Hệ thống liên kết với sản phẩm</h6>
                <p class="mb-0 small text-muted">Tự động đồng bộ công thức, tồn kho và phiếu nhập để vận hành kho hiệu quả.</p>
            </div>
        </div>
        <div class="d-flex flex-wrap gap-2 ms-xl-auto">
            @if (!string.IsNullOrWhiteSpace(receivingUrl))
            {
                <a class="btn btn-outline-primary btn-sm" href="@receivingUrl">
                    <i class="fas fa-truck-loading me-1"></i>Phiếu nhập kho
                </a>
            }
            @if (!string.IsNullOrWhiteSpace(inventoryUrl))
            {
                <a class="btn btn-outline-primary btn-sm" href="@inventoryUrl">
                    <i class="fas fa-boxes-stacked me-1"></i>Tồn kho
                </a>
            }
            @if (!string.IsNullOrWhiteSpace(recipesUrl))
            {
                <a class="btn btn-outline-primary btn-sm" href="@recipesUrl">
                    <i class="fas fa-book me-1"></i>Công thức sản phẩm
                </a>
            }
        </div>
    </div>
</div>

<style>
    .module-integrations-icon {
        width: 44px;
        height: 44px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

    .module-integrations .btn-outline-primary {
        border-width: 1px;
    }
</style>
